<div class="<%= container_class %>">
  <%= render checkbox_control %>

  <% if show_help_text? %>
    <div id="<%= html.help_text_id %>" class="form-text">
      <%= helpers.helpdesk(help_text, false) %>
    </div>
  <% end %>

  <% if show_content? %>
    <%= capture(self, &content) %>
  <% end %>
</div>