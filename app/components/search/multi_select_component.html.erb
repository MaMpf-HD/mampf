<div class="<%= container_classes %>">
  <%= form.label name, label, class: "form-label" %>
  <% if help_text %>
    <%= helpers.helpdesk(help_text, true) %>
  <% end %>

  <%= form.select name,
                  options_html,
                  select_tag_options,
                  select_html_options.merge(
                    id: element_id,
                    data: (select_html_options[:data] || {}).merge(
                      search_form_target: "select"
                    )
                  ) %>

  <% unless respond_to?(:skip_all_checkbox?) && skip_all_checkbox? %>
    <%= render(Search::Controls::CheckboxComponent.new(
      form: form,
      name: all_toggle_name,
      label: all_checkbox_label,
      checked: true,
      data: respond_to?(:all_toggle_data_attributes) ? all_toggle_data_attributes : {
        search_form_target: "allToggle",
        action: "change->search-form#toggleFromCheckbox"
      }
    )) %>
  <% end %>

  <% if content %>
    <%= capture(self, &content) %>
  <% end %>
</div>