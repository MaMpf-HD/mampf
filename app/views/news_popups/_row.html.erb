<div class="list-group-item news-popup-row" data-id="<%= popup.id.to_i %>">
  <div class="row align-items-center">
    <div class="col-2 fw-light">
      <%= popup.created_at %>
    </div>
    <div class="col-2 fw-light">
      <%= popup.updated_at %>
    </div>
    <div class="col-3">
      <%= popup.name %>
    </div>
    <div class="col-2">
      <%= link_to 'Test',
                  '/news_popups/' + popup.name + '.html',
                  target: :_blank,
                  role: 'button',
                  class: 'btn btn-primary' %>
    </div>
    <div class="col-2">
        <% is_checked = popup.active ? 'checked' : '' %>
        <input class="form-check-input" type="checkbox"
          <%= is_checked %> disabled>
    </div>

    <%# Actions %>
    <div class="col-1">
      <%= link_to edit_news_popup_path(popup),
                  class: 'btn text-dark',
                  role: 'button',
                  title: t('buttons.edit'),
                  remote: true do %>
        <i class="bi bi-pencil-fill"></i>
      <% end %>
    </div>
  </div>
</div>
