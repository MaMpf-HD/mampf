<%= turbo_frame_tag 'assignment_form' do %>
  <%= render 'assessment/assignments/form', assignment: @assignment %>
<% end %>

<script>
  // Initialize datetime picker for the new assignment form
  if (window.initializeDatetimePickers) {
    window.initializeDatetimePickers();
  }

  // Initialize TomSelect for medium selection
  new TomSelect("#assignment_medium_id_<%= @assignment.id %>", {
    sortField: {
      field: "text",
      direction: "asc",
    },
    render: {
      no_results: function (_data, _escape) {
        return '<div class="no-results"><%= t("basics.no_results") %></div>';
      },
    },
  });
</script>
