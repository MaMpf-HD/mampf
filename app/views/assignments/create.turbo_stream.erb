<% if @errors.present? %>
  <%= turbo_stream.replace 'assignment_form' do %>
    <%= turbo_frame_tag 'assignment_form' do %>
      <%= render 'assessment/assignments/form', assignment: @assignment %>
    <% end %>
  <% end %>
<% else %>
  <%= turbo_stream.replace 'assignment_form', '' %>
  <%= turbo_stream.prepend 'assessment-assessments-list' do %>
    <%= render AssessmentListItemComponent.new(assessable: @assignment, lecture: @lecture) %>
  <% end %>
<% end %>
