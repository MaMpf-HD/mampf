<% relevant_notifications = current_user.notifications
                                        .sort_by(&:created_at).reverse %>
<% if relevant_notifications.present? %>
  <ul class="navbar-nav">
    <li class="nav-item">
      <div class="btn-group">
        <button class="btn btn-primary btn-sm dropdown-toggle mr-3"
                type="button"
                data-toggle="dropdown">
          <i class="far fa-bell text-light">
          </i>
          <span class="badge badge-light">
            <%= relevant_notifications.count %>
          </span>
        </button>
        <div class="dropdown-menu">
          <% relevant_notifications.first(5).each do |n| %>
            <a href="<%= n.path %>"
               class="dropdown-item"
               style="font-size: 0.8em;">
              <%= notification_menu_item(n) %>
            </a>
          <% end %>
          <div class="dropdown-divider">
          </div>
          <a href="<%= notifications_path %>"
             class="dropdown-item">
            alle anzeigen
          </a>
          <a href="<%= destroy_all_notifications_path %>"
             class="dropdown-item"
             data-remote="true"
             data-method="post">
            alle erledigen
          </a>
        </div>
      </div>
    </li>
  </ul>
<% end %>