<nav class="navbar navbar-expand navbar-dark bg-dark" id="firstnav">
  <%= image_tag '/MaMpf-Logo_32x32.png',
                class: 'img-fluid mr-2' %>
  <%= link_to "MaMpf", root_path,
              class: 'navbar-brand' %>
  <button class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#collapsingNavbarLg">
    <span class="navbar-toggler-icon">
    </span>
  </button>
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <a href="<%= edit_profile_path %>"
             class="fas fa-user-cog fa-lg text-light nav-link"
             style="text-decoration: none; "
             data-toggle="tooltip"
             title="<%= t('navbar.profile') %>">
          </a>
        </li>
        <% if current_user.admin || current_user.editor? %>
          <li class="nav-item">
            <a href="<%= administration_path %>"
               class="fas fa-tools fa-lg text-light nav-link"
               style="text-decoration: none; "
               data-toggle="tooltip"
               title="<%= t('navbar.administration') %>">
            </a>
          </li>
        <% end %>
        <li class="nav-item">
          <a href="<%= news_path %>"
             class="far fa-newspaper fa-lg text-light nav-link"
             style="text-decoration: none; "
             data-toggle="tooltip"
             title="<%= t('navbar.news') %>">
          </a>
        </li>
        <li class="nav-item">
          <a href="<%= DefaultSetting::BLOG_LINK %>"
             class="fas fa-blog fa-lg text-light nav-link"
             style="text-decoration: none; "
             data-toggle="tooltip"
             title="<%= t('navbar.blog') %>">
          </a>
        </li>
        <li class="nav-item">
          <a href="<%= destroy_user_session_path %>"
             class="fas fa-sign-out-alt fa-lg text-light nav-link"
             style="text-decoration: none; "
             data-toggle="tooltip"
             data-method="delete"
             title="<%= t('navbar.logout') %>">
          </a>
        </li>
      <% else %>
        <li class="nav-item">
          <a href="<%= new_user_session_path %>"
             class="fas fa-sign-in-alt fa-lg text-light nav-link"
             style="text-decoration: none; "
             data-toggle="tooltip"
             title="Login">
          </a>
        </li>
        <li class="nav-item">
          <a href="<%= news_path %>"
             class="far fa-newspaper fa-lg text-light nav-link"
             style="text-decoration: none; "
             data-toggle="tooltip"
             title="News">
          </a>
        </li>
        <li class="nav-item">
          <a href="<%= DefaultSetting::BLOG_LINK %>"
             class="fas fa-blog fa-lg text-light nav-link"
             style="text-decoration: none; "
             data-toggle="tooltip"
             title="Blog">
          </a>
        </li>
      <% end %>
    </ul>
    <% if user_signed_in? %>
      <% unless current_user.courses.empty? %>
        <ul class="navbar-nav mr-auto" id="coursesDrop">
          <%= render partial: 'shared/dropdown_courses',
                     locals: { courses: current_user.courses } %>
        </ul>
      <% end %>
      <% unless current_user.no_notifications %>
        <%= render partial: 'shared/dropdown_notifications'%>
      <% end %>
      <%= form_tag(search_index_path,
                   method: 'get',
                   class: 'form-inline mt-2 mt-md-0',
                   id: 'searchField') do %>
        <%= search_field_tag 'search',
                             nil,
                             class: 'form-control mr-sm-2',
                             placeholder: t('navbar.search') %>
      <% end %>
    <% end %>
  </div>
</nav>
<nav class="navbar navbar-expand navbar-dark bg-dark" id="secondnav"
     style="display: none;">
</nav>