<div class="row">
  <% unless c.kaviar?  || c.available_extras.present? %>
    <div class="col-12">
    Zu diesem Kurs gibt es im Moment noch keine Inhalte.
  </div>
  <% end %>
  <% if c.kaviar? %>
    <div class="col-12">
      Videoaufzeichnung aus dem Semester:
    </div>
    <div class="col-12">
      <%= f.form_group do %>
        <% c.kaviar_lectures_by_date.each do |l| %>
          <% lecture = 'lecture-' + l.id.to_s %>
          <% checked = @user.lectures.where(id: l.id).present? %>
          <%= f.check_box lecture, label: l.term.to_label_short,
                          checked: subscribed ? checked : l.newest_kaviar?,
                          disabled: !subscribed,
                          inline: true %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <% if c.available_extras.present? %>
    <div class="col-12">
      Weitere Angebote:
    </div>
    <% if c.news.present? %>
      <div class="col-12">
        <% news = 'news-' + c.id.to_s %>
        <%= f.form_group do %>
          <% f.check_box news, label: 'Newsfeed',
                         checked: subscribed ? details.news != false : true,
                         disabled: !subscribed %>
        <% end %>
      </div>
    <% end %>
    <% if c.sesam? %>
      <div class="col-12">
        <% sesam = 'sesam-' + c.id.to_s %>
        <%= f.form_group do %>
          <% f.check_box sesam, label: 'SeSAM',
                         checked: subscribed ? details.sesam != false : true,
                         disabled: !subscribed %>
        <% end %>
      </div>
    <% end %>
    <% if c.keks? %>
      <div class="col-12">
        <% keks = 'keks-' + c.id.to_s %>
        <%= f.form_group do %>
          <% f.check_box keks, label: 'KeKs',
                         checked: subscribed ? details.keks != false : true,
                         disabled: !subscribed %>
        <% end %>
      </div>
    <% end %>
    <% if c.erdbeere? %>
      <div class="col-12">
        <% erdbeere = 'erdbeere-' + c.id.to_s %>
        <%= f.form_group do %>
          <% f.check_box erdbeere, label: 'ErDBeere',
                         disabled: !subscribed,
                         checked: subscribed ? details.erdbeere != false : true %>
        <% end %>
      </div>
    <% end %>
    <% if c.kiwi? %>
      <div class="col-12">
        <% kiwi = 'kiwi-' + c.id.to_s %>
        <%= f.form_group do %>
          <% f.check_box kiwi, label: 'KIWi',
                         checked: subscribed ? details.kiwi != false : true,
                         disabled: !subscribed %>
        <% end %>
      </div>
    <% end %>
    <% if c.reste? %>
      <div class="col-12">
        <% reste = 'reste-' + c.id.to_s %>
        <%= f.form_group do %>
          <% f.check_box reste, label: 'RestE',
                         checked: subscribed ? details.reste != false : true,
                         disabled: !subscribed %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
