<%= bootstrap_form_with url: profile_update_path, scope: 'user', method: 'patch' do |f| %>
  <%= f.collection_check_boxes :lecture_ids, Lecture.all, :id, :to_label, label: 'Abonnierte Vorlesungen:' %>
  <%= f.form_group :subscription_type, label: { text: "MaMpf liefert eine Vielzahl von verknüpfte Inhalten. Ich möchte verknüpfte Inhalte" } do %>
  <%= f.radio_button :subscription_type, 1, label: "auch aus allen Vorlesungen sehen, die sich inhaltlich vor den von mir abonnierten Vorlesungen einsortieren.", checked: @user.subscription_type == 1 || @user.subscription_type.nil? %>
  <%= f.radio_button :subscription_type, 2, label: "aus allen Vorlesungen sehen.", checked: @user.subscription_type == 2 %>
  <%= f.radio_button :subscription_type, 3, label: "ausschließlich aus den von mir abonnierten Vorlesungen sehen.", checked: @user.subscription_type == 3 %>
<% end %>
  <%= f.submit "Profil updaten", class: 'btn btn-info' %>
<% end %>
