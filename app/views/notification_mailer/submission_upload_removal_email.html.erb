<% if @recipient == @remover %>
  <%= t('mailer.submission_upload_removal_html',
        assignment: @assignment.title,
        filename: @filename,
        lecture: @assignment.lecture.short_title)  %>
<% else %>
  <%= t('mailer.submission_upload_removal_by_others_html',
        assignment: @assignment.title,
        filename: @filename,
        lecture: @assignment.lecture.short_title,
        remover: @remover.name) %>
<% end %>