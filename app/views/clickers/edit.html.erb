<div class="row mt-3">
  <div class="col-12">
    <% if user_signed_in? %>
      Das ist die authentifizierte Seite zum Bearbeiten des Clickers.
    <% else %>
      Das ist die unauthentifizierte Seite zum Bearbeiten des Clickers.
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <%= t('admin.clicker.user_link') %>:
    <%= link_to @user_path,
                @user_path %>
  </div>
</div>
<% if user_signed_in? %>
  <div class="row">
    <div class="col-12">
      <%= t('admin.clicker.editor_link') %>:
      <%= link_to @editor_path,
                  @editor_path %>
    </div>
  </div>
<% end %>
<div class="row mt-3">
  <div class="col-12">
    <%= link_to t('admin.clicker.close'),
                close_clicker_path(@clicker,
                                   params: { code: @code }),
                id: 'closeClickerButton',
                class: 'btn btn-primary',
                style: "display: #{show_no_block(@clicker.open?)}",
                remote: true %>
    <%= link_to t('admin.clicker.open'),
                open_clicker_path(@clicker,
                                  params: { code: @code }),
                id: 'openClickerButton',
                class: 'btn btn-primary',
                style: "display: #{show_no_block(@clicker.closed?)}",
                remote: true %>
    <%= link_to t('admin.clicker.reset'),
                reset_clicker_path(@clicker,
                                   params: { code: @code }),
                id: 'resetClickerButton',
                class: 'btn btn-primary',
                style: "display: #{show_no_block(@clicker.closed?)}",
                remote: true %>
  </div>
</div>
<% if @clicker.closed? %>
  <%= form_with model: @clicker do |f| %>
    <%= f.hidden_field :code, value: @code %>
    <div class="col-6 col-lg-3 form-.group">
      <%= f.label :alternatives, t('admin.clicker.alternatives') %>
      <%= f.select :alternatives,
                   options_for_select((2..6).zip((2..6)), 3),
                   {},
                   { class: 'form-control'} %>
    </div>
  <% end %>
<% end %>