<div class="mb-3"
     id="matrixRowCount"
     data-count="<%= content.row_count %>">
  <span class="me-2">
    <%= "#{t('math.number_of_rows')}:" %>
  </span>
  <% (1..4).each do |i| %>
    <div class="form-check form-check-inline">
      <%= solution_content_fields.radio_button :row_count,
                         i,
                         class: 'form-check-input rowCount',
                         checked: content.row_count == i,
                         data: { count: i } %>
      <%= solution_content_fields.label :row_count,
                  "#{i}",
                  value: i,
                  class: 'form-check-label' %>
    </div>
  <% end %>
</div>
<div class="mb-3"
     id="matrixColumnCount"
     data-count="<%= content.column_count %>">
  <span class="me-2">
    <%= "#{t('math.number_of_columns')}:" %>
  </span>
  <% (1..4).each do |i| %>
    <div class="form-check form-check-inline">
      <%= solution_content_fields.radio_button :column_count,
                         i,
                         class: 'form-check-input columnCount',
                         checked: content.column_count == i,
                         data: { count: i } %>
      <%= solution_content_fields.label :column_count,
                  "#{i}",
                  value: i,
                  class: 'form-check-label' %>
    </div>
  <% end %>
</div>

<% (1..4).each do |i| %>
  <div class="row mb-2">
    <% (1..4).each do |j| %>
      <div class="col-3 matrixEntry"
           style="display: <%= show_no_block(i <= content.row_count && j <= content.column_count ) %>"
           data-row="<%= i %>"
           data-column="<%= j %>">
        <%= render partial: 'questions/domains/expression',
                   locals: { solution_content_fields: solution_content_fields,
                             value: content.entry(i,j),
                             counter: "#{i},#{j}",
                             type: 'MampfExpression' } %>
      </div>
    <% end %>
  </div>
<% end %>
