<div class="modal fade"
     id="lessonModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="lessonModalLabel" aria-hidden="true"
     data-backdrop="static">
  <div class="modal-dialog modal-lg"
       role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="lessonModalLabel">
          <%= t("buttons.create_lesson") %>
        </h5>
        <button type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close">
          <span aria-hidden="true">
            &times;
          </span>
        </button>
      </div>
      <div class="modal-body" id="lesson-modal-content">
      </div>
    </div>
  </div>
</div>