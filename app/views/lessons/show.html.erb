<div class="row">
  <div class="col-10">
    <h2>
      <span class="badge badge-secondary mr-3">
        Sitzung
      </span>
      <%= @lesson.to_label %>
      von
      <% if current_user.lectures.include?(@lesson.lecture) %>
        <%= link_to @lesson.lecture.title,
                    @lesson.lecture.path(current_user),
                    class: 'text-dark' %>
      <% else %>
        <span>
          <%= @lesson.lecture.title %>
        </span>
      <% end %>
    </h2>
  </div>
  <div class="col-2 text-right ">
    <% if @lesson.previous.present? %>
      <a href="<%= lesson_path(@lesson.previous) %>"
         class="text-secondary material-icons mr-2"
         style="text-decoration:none; font-size: 3em;"
         data-toggle="tooltip"
         title="vorige Sitzung">
        keyboard_arrow_left
      </a>
    <% end %>
    <% if @lesson.next.present? %>
      <a href="<%= lesson_path(@lesson.next) %>"
         class="text-secondary material-icons"
         style="text-decoration:none; font-size: 3em;"
         data-toggle="tooltip"
         title="nächste Sitzung">
        keyboard_arrow_right
      </a>
    <% end %>
  </div>
</div>
<div class="row mb-2">
  <div class="col-12 col-xl-6 pt-3">
    <%= render partial: 'items/items',
               locals: { items: @lesson.items,
                         small: false } %>
  </div>
  <div class="col-12 col-xl-6 pt-3">
    <% unless @lesson.tags.empty? && @lesson.sections.empty? %>
      <div class="row">
        <% unless @lesson.tags.empty? %>
          <div class="col-12 col-xl-6">
            <%= render partial: 'tags/tags',
                       locals: { related_tags: @lesson.tags,
                                 tags_description: 'Verknüpfte Begriffe'} %>
          </div>
        <% end %>
        <% unless @lesson.sections.empty? %>
          <div class="col-12 col-xl-6">
            <%= render partial: 'sections/sections',
                       locals: { sections: @lesson.sections } %>
          </div>
        <% end %>
      </div>
    <% end %>
    <% unless @lesson.media.empty? %>
      <div class="row pt-3">
        <div class="col-12">
          <h5>
            Verknüpfte Medien
          </h5>
        </div>
        <div class="col-12">
          <%= render partial: 'lessons/media',
                     locals: { media: @lesson.media} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
