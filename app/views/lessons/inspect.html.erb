<div class="row p-2">
  <div class="col-3">
    <h4 class="pl-2">
      <span class="badge badge-secondary">
        Sitzung
      </span>
      Nummer <%= @lesson.number %> vom
      <%= @lesson.date.day %>.<%= @lesson.date.month %>.<%= @lesson.date.year %>
    </h4>
  </div>
  <div class="col-5">
  </div>
  <div class="col-4 text-center">
    <% if current_user.admin ||
          current_user.in?(@lesson.lecture.editors_with_inheritance) %>
      <%= link_to 'Bearbeiten', edit_lesson_path(@lesson),
                  class: 'btn btn-primary my-1' %>
    <% end %>
    <%= link_to 'zur Vorlesung', inspect_lecture_path(@lesson.lecture),
                class: 'btn btn-primary' %>
  </div>
</div>
<div class="row p-2 mb-3">
  <div class="col-12">
    <span class="pl-2">
      (zur Vorlesung <%= link_to @lesson.lecture.title, edit_lecture_path(@lesson.lecture) %>)
    </span>
  </div>
</div>
<div class="row p-2">
  <div class="col-6">
    <div class="card bg-mdb-color-lighten-6 mb-4" id="lesson-basics-edit-<%= @lesson.id.to_i %>">
      <%= render partial: 'lessons/basics',
                 locals: { lesson: @lesson, inspection: true, modal: false } %>
    </div>
  </div>
  <div class="col-6">
    <div class="row">
      <div class="col-12">
        <%= render partial: 'media/card',
                   locals: { media: @lesson.media, small: true,
                             collapsible: true } %>
      </div>
    </div>
  </div>
</div>
