<%= render(SearchForm::SearchForm.new(url: search_media_path,
                                      context: "media")) do |c| %>
  <% c.add_medium_type_filter(current_user: current_user, purpose: purpose) %>

  <% c.add_teachable_filter_with_inheritance %>

  <% c.add_tag_filter_with_operators %>

  <% c.add_editor_filter %>

  <% c.add_medium_access_filter %>

  <% c.add_answer_count_filter(purpose: purpose) %>

  <% c.add_fulltext_filter %>

  <% c.add_per_page_filter(
       per_options: hits_per_page(true),
       default: default_hits_per_page(true)
     ) %>

  <% c.add_hidden_field(name: :purpose, value: purpose) %>
  <% c.add_hidden_field(name: :results_as_list, value: 'true') %>

  <% c.add_submit_field %>
  <% end %>