<%= render(SearchForm::Form.new(
  url: media_search_path,
  context: 'media'
)) do |c| %>

  <% c.with_field(SearchForm::Filters::MediumTypeFilter.new(
    purpose: purpose
  )) %>

  <% c.with_field(SearchForm::Filters::TeachableFilter.new) do |field| %>
    <%= field.render_inheritance_radios %>
  <% end %>

<% c.with_field(SearchForm::Filters::TagFilter.new) do |field| %>
  <%= field.render_tag_operator_radios %>
<% end %>

  <% c.with_field(SearchForm::Filters::EditorFilter.new) %>

  <% c.with_field(SearchForm::Filters::FulltextFilter.new) %>

  <% c.with_field(SearchForm::Filters::MediumAccessFilter.new) %>

  <% c.with_field(SearchForm::Filters::AnswerCountFilter.new(
    purpose: purpose
  )) %>

  <% c.with_field(SearchForm::Fields::PerPageField.new(
    per_options: hits_per_page(true),
    default: default_hits_per_page(true)
  )) %>

  <% c.with_hidden_field(name: :purpose, value: purpose) %>
  <% c.with_hidden_field(name: :results_as_list, value: 'true') %>

  <% c.with_footer(results_container_id: "medium-search-results")%>
<% end %>