<%= render(Search::FormComponent.new(
  url: media_search_path,
  scope: 'search',
  remote: true,
  method: :get
)) do |c| %>

  <% c.with_field(Search::Filters::MediaTypesFilterComponent.new(
    purpose: purpose,
    context: 'media'
  )) %>

  <% c.with_field(Search::Filters::TeachableFilterComponent.new) do |field| %>
    <%= field.render_inheritance_radios %>
  <% end %>

<% c.with_field(Search::Filters::TagsFilterComponent.new) do |field| %>
  <%= field.render_tag_operator_radios %>
<% end %>

  <% c.with_field(Search::Filters::EditorFilterComponent.new(
    context: 'media'
  )) %>

  <% c.with_field(Search::Filters::FulltextFilterComponent.new(
    context: 'media'
  )) %>

  <% c.with_field(Search::Filters::AccessFilterComponent.new) %>

  <% c.with_field(Search::Filters::AnswerCountFilterComponent.new(
    purpose: purpose
  )) %>

  <% c.with_field(Search::Filters::PerPageFilterComponent.new(
    per_options: hits_per_page(true),
    default: default_hits_per_page(true)
  )) %>

  <%# c.with_hidden_field(:purpose, value: purpose) %>
  <%# c.with_hidden_field(:results_as_list, value: 'true') %>

  <% c.with_footer(results_container_id: "medium-search-results")%>
<% end %>