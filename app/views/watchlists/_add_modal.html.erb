<div class="modal fade"
     id="watchlistModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="watchlistModalLabel" aria-hidden="true"
     data-keyboard="true">
  <div class="modal-dialog modal-lg"
       role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"
            id="watchlistModalTitle">
          <%= t('watchlist.add') %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body"
           id="watchlistModalBody">
        <div id="watchlist-select-form">
          <%= render partial: 'watchlists/select_form' %>
        </div>
        <%= render partial: 'watchlists/new_form' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary mr-auto" data-dismiss="modal"><%= t('watchlist.close') %></button>
        <%= button_to t('watchlist.add'), {}, 
                      class: "btn btn-primary",
                      id: "watchlistEntrySubmitButton",
                      onclick: "Rails.fire(document.getElementById('watchlistSelectForm'), 'submit')",
                      disabled: Watchlist.where(user: current_user).empty? %>
      </div>
    </div>
  </div>
</div>
