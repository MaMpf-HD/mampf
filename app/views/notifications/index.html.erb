<div class="card mb-2">
  <div class="card-header">
    <div class="row mb-2">
      <div class="col-12 col-sm-10">
        <h4>
          <%= t('notifications.title') %>
          <% if @notifications.present? %>
            <span class="badge badge-secondary notificationCounter">
              <%= @notifications.count %>
            </span>
          <% end %>
        </h4>
      </div>
      <div class="col-12 col-sm-2 text-right">
        <%= link_to t('notifications.check_notifications'),
                    destroy_all_notifications_path,
                    class: 'btn btn-sm btn-secondary',
                    method: :post,
                    remote: true %>
      </div>
    </div>
  </div>
  <div class="card-body"
       id="notificationCardBody">
    <div class="row" id="notificationCardRow">
      <% if @notifications.present? %>
        <% @notifications.each do |n| %>
          <div class="col-12 col-md-6 col-xl-4 col-xxl-4 col-xxxl-3 mb-2"
               data-notificationCard="<%= n.id %>">
            <%= render partial: 'notifications/notification',
                       locals: { notification: n } %>
          </div>
        <% end %>
      <% else %>
        <div class="col-12">
          <%= t('notifications.no_notifications') %>
        </div>
      <% end %>
    </div>
  </div>
</div>