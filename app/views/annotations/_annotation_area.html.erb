<figcaption id="annotation-caption">
   <div id="annotation-infobar">
      <!--- ANNOTATION CATEGORY -->
   </div>
   <div id="annotation-comment">
      <!--- ANNOTATION COMMENT -->
   </div>
   <!--- ANNOTATION AREA BUTTONS -->
   <div id="annotation-area-buttons">
      <a class="btn" id="annotation-previous-button">
         <i class="fa fa-arrow-left" aria-hidden="true" data-toggle="tooltip"
            title="<%= t('admin.annotation.previous_annotation') %> (A)">
         </i>
      </a>

      <a class="btn" id="annotation-next-button">
         <i class="fa fa-arrow-right" aria-hidden="true" data-toggle="tooltip"
            title="<%= t('admin.annotation.next_annotation') %> (S)">
         </i>
      </a>

      <a class="btn" id="annotation-goto-button">
         <i class="fa fa-map-pin" aria-hidden="true" data-toggle="tooltip"
            title="<%= t('admin.annotation.annotation_position') %>">
         </i>
      </a>

      <a class="btn" id="annotation-edit-button">
         <i class="fa fa-pen" aria-hidden="true" data-toggle="tooltip"
            title="<%= t('admin.annotation.edit_annotation') %>">
         </i>
      </a>

      <a class="btn" id="annotation-close-button">
         <i class="fa fa-window-close" aria-hidden="true" data-toggle="tooltip"
            title="<%= t('admin.annotation.close_annotation_area') %>">
         </i>
      </a>
   </div>
</figcaption>