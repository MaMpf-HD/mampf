<%= render(SearchForm::SearchForm.new(url: media_search_path, context: "media")) do |c| %>
  <% c.add_medium_type_filter(current_user: current_user, purpose: purpose) %>

  <% c.add_tag_filter_with_operators %>

  <% c.add_lecture_scope_filter_with_lecture_options %>

  <% c.add_fulltext_filter %>

  <% c.add_per_page_filter(
       per_options: hits_per_page(false),
       default: default_hits_per_page(false)
     ) %>

  <% c.add_hidden_field(name: :purpose, value: purpose) %>
  <% c.add_hidden_field(name: :results_as_list, value: 'false') %>
  <% c.add_hidden_field(name: :from, value: 'start') %>
  <% c.add_submit_field %>
<% end %>