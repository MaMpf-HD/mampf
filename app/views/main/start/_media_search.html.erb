<%= render_search_form(url: media_search_path, context: "media") do |f|
  f.medium_type_filter(purpose: purpose)

  f.tag_filter.with_ajax(model: "tag").with_operator_radios

  f.lecture_scope_filter.with_lecture_options

  f.fulltext_filter
  
  f.per_page_filter(
    per_options: hits_per_page(false),
    default: default_hits_per_page(false)
  )
  
  f.hidden_field(
    purpose: purpose,
    results_as_list: 'false',
    from: 'start'
  )
end %>