<%= render(SearchForm::Form.new(
  url: media_search_path,
  context: 'media'
)) do |c| %>

  <% c.with_field(SearchForm::Filters::MediaTypesFilterComponent.new(
    purpose: purpose
  )) %>

  <% c.with_field(SearchForm::Filters::TagsFilterComponent.new) do |field| %>
    <%= field.render_tag_operator_radios %>
  <% end %>

<% c.with_field(SearchForm::Filters::LectureScopeFilterComponent.new) do |field| %>
  <%= field.render_lecture_options %>
<% end %>


    <% c.with_field(SearchForm::Filters::FulltextFilterComponent.new) %>

  <% c.with_field(SearchForm::Filters::PerPageFilterComponent.new(
    per_options: hits_per_page(false),
    default: default_hits_per_page(false)
  )) %>

  <% c.with_hidden_field(name: :purpose, value: purpose) %>
  <% c.with_hidden_field(name: :results_as_list, value: 'false') %>
  <% c.with_hidden_field(name: :from, value: 'start') %>

  <% c.with_footer(results_container_id: "medium-search-results") %>
<% end %>