<%= render_search_form(url: lecture_search_path, context: "lectures") do |f|
  f.lecture_type_filter

  f.term_filter

  f.program_filter(column_class: "col-6 col-lg-3")

  f.teacher_filter

  f.fulltext_filter(
    column_class: "col-6 col-lg-3",
    id: "fullTextSearch"
  )
  
  f.per_page_filter(
    id: "hitsPerPage",
    per_options: hits_per_page(results_as_list),
    default: default_hits_per_page(results_as_list)
  )
  
  f.hidden_field(results_as_list: results_as_list)
end %>