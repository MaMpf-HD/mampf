<%= render(Search::FormComponent.new(
  url: lecture_search_path,
  context: 'lectures',
)) do |c| %>

  <% c.with_field(Search::Filters::TypesFilterComponent.new) %>

  <% c.with_field(Search::Filters::TermFilterComponent.new) %>

  <% c.with_field(Search::Filters::ProgramFilterComponent.new(
    column_class: "col-6 col-lg-3")) %>

  <% c.with_field(Search::Filters::TeacherFilterComponent.new) %>

  <% c.with_field(Search::Filters::FulltextFilterComponent.new(
    column_class: "col-6 col-lg-3",
    id: "fullTextSearch"
  )) %>

  <% c.with_field(Search::Filters::PerPageFilterComponent.new(
    id: "hitsPerPage",
    per_options: hits_per_page(results_as_list),
    default: default_hits_per_page(results_as_list)
  )) %>

  <% c.with_footer(results_container_id: "lecture-search-results") %>

  <% c.with_hidden_field(name: :results_as_list, value: results_as_list) %>

<% end %>