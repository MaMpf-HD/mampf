<%= render(SearchForm::SearchForm.new(
  url: lecture_search_path,
  context: 'lectures',
)) do |c| %>

  <% c.with_field(SearchForm::Filters::LectureTypeFilter.new) %>

  <% c.with_field(SearchForm::Filters::TermFilter.new) %>

  <% c.with_field(SearchForm::Filters::ProgramFilter.new(
    column_class: "col-6 col-lg-3")) %>

  <% c.with_field(SearchForm::Filters::TeacherFilter.new) %>

  <% c.with_field(SearchForm::Filters::FulltextFilter.new(
    column_class: "col-6 col-lg-3",
    id: "fullTextSearch"
  )) %>

  <% c.with_field(SearchForm::Fields::PerPageField.new(
    id: "hitsPerPage",
    per_options: hits_per_page(results_as_list),
    default: default_hits_per_page(results_as_list)
  )) %>

  <% c.with_footer(results_container_id: "lecture-search-results") %>

  <% c.with_hidden_field(name: :results_as_list, value: results_as_list) %>

<% end %>