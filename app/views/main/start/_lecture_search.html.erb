<%= render(SearchForm::SearchForm.new(url: lecture_search_path, context: "lectures")) do |c| %>
  <% c.add_lecture_type_filter %>

  <% c.add_term_filter %>

  <% c.add_program_filter %>

  <% c.add_teacher_filter %>

  <% c.add_fulltext_filter %>

  <% c.add_per_page_filter(
       id: "hitsPerPage",
       per_options: hits_per_page(results_as_list),
       default: default_hits_per_page(results_as_list)
     ) %>

  <% c.add_hidden_field(name: :results_as_list, value: results_as_list) %>
  <% c.add_submit_field %>
<% end %>