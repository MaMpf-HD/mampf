<div class="form-floating mt-3">
    <%= f.text_area :text,
        placeholder: '_',
        class: 'form-control',
        style: 'height: 150px',
        required: true,
        minlength: Vignettes::TextAnswer::TEXT_MIN_LENGTH,
        maxlength: Vignettes::TextAnswer::TEXT_MAX_LENGTH,
        'data-too-short-message':
            t('vignettes.body_too_short_error',
              min_length: Vignettes::TextAnswer::TEXT_MIN_LENGTH),
        'data-value-missing-message':
            t('vignettes.body_missing_error')
    %>
    <%= f.label :text do %>
      <i class="bi bi-pencil"></i> <%= t('vignettes.your_answer') %>
    <% end %>
</div>
