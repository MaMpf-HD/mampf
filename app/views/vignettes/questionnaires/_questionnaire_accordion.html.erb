<div id="questionnaire_accordion" role="tablist">
  <div class="card bg-light">
    <div class="card-header" role="tab" id="questionnaire_heading">
      <div class="row">
        <div class="col-6">
          <h5>
            Vignettes
          </h5>
        </div>
        <div class="col-6 text-end">
            <%= link_to '',
                        '#',
                        class:"fas fa-plus-circle fa-lg new-questionnaire text-dark",
                        style:"text-decoration: none; margin-right: 0.5rem;",
                        data: { 
                          bs_toggle: "modal",
                          bs_target: "#vignetteModal",
                          bs_tooltip: "tooltip"
                        },
                        title: t('buttons.create_questionnaire', default: 'Create Questionnaire')
                        %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <ul class="list-group"> 
        <% questionnaires = lecture.vignettes_questionnaires %>
        <% if questionnaires.present? %>
          <% questionnaires.each do |questionnaire| %>
            <li class="list-group-item">
              <%= link_to questionnaire.title, edit_vignettes_questionnaire_path(questionnaire) %>
            </li>
          <% end %>
        <% else %>
          <li class="list-group-item">
            <%= t('admin.lecture.no_questionnaires', default: 'No questionnaires available') %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
