<%= bootstrap_devise_error_messages! %>

<h1>Registrieren</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
  <div class="form-group">
    <%= f.label 'Email' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Passwort' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Passwortbestätigung' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.check_box :consents, label: 'dshfj' %>
    <%= f.label :consents, raw('Ich stimme der Speicherung und Verarbeitung meiner '\
                           'Daten gemäß der ' +
                           link_to('Datenschutzerklärung',
                                   'https://www.uni-heidelberg.de/datenschutzerklaerung_web.html',
                                   target: :_blank) +
                           ' der Universität Heidelberg zu.') %>
  </div>
  <div class="form-group">
    <%= f.submit 'Registrieren', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
