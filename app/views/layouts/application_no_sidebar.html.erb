<!DOCTYPE html>
<html>
  <head>
    <% if session[:show_login_transition] %>
      <meta name="view-transition" content="same-origin" />
      <%= vite_stylesheet_tag "styles/view_transition.css", blocking: "render" %>
      <%= vite_stylesheet_tag "login/login_transition.css", blocking: "render" %>
      <% session.delete(:show_login_transition) %>
    <% end %>

    <%= render partial: 'layouts/head' %>
  </head>

  <body class="d-flex flex-column min-vh-100"
        data-locale="<%= I18n.locale %>" style="overflow-y: scroll;">

    <%= render partial: "flash/messages" %>
    <%= render partial: "shared/navbar" %>

    <div class="container-fluid fluidvert">
      <div class="row">
        <main class="col-12 pt-3" role="main">
          <%= yield %>
        </main>
      </div>
    </div>

    <div id="modal-container"></div>

    <footer class="mt-auto">
      <%= render partial: 'shared/footer' %>
    </footer>

  </body>
</html>
