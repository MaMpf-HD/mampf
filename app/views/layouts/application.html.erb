<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= full_title(yield(:title)) %>
    </title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application',
                            media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.0.11/css/all.css"
          integrity="sha384-p2jx59pefphTFIpeqCcISO9MdVfIm4pNnsL08A6v5vaQc4owkQqxMV8kg4Yvhaw/"
          crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <%= javascript_include_tag 'application',
                               'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
       <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
       </script>
     <![endif]-->
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>
  <body>
    <% unless user_signed_in? && (current_user.teacher? || current_user.admin?) &&
              administrates?(controller_name, action_name) %>
    <%= render partial: 'shared/navbar' %>
    <div class="container-fluid">
      <div class="row">
        <%= render partial: 'shared/sidebar',
                   locals: { course_id: course_id_from_cookie } %>
        <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
          <div class="alert alert-danger" id="js-messages" role="alert"
               style="display: none;">
          </div>
          <% if alert.present? %>
            <div class="alert alert-danger" role="alert">
              <%= alert %>
            </div>
          <% end %>
          <% if notice.present? %>
            <div class="alert alert-secondary" role="alert">
              <%= notice %>
            </div>
          <% end %>
          <%= yield %>
        </main>
      </div>
    </div>
    <footer>
      <%= render partial: 'shared/footer' %>
    </footer>
    <% else %>
      <div id="administrate">
        <div id="admin-navbar">
          <%= render partial: 'administration/navbar' %>
        </div>
        <div id="admin-area">
          <%= yield %>
        </div>
      </div>
    <% end %>
  </body>
</html>
