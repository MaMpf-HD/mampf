<!DOCTYPE html>
<html>
  <head>
    <%= render partial: 'layouts/head' %>
    <%= stylesheet_link_tag 'sidebar' %>
  </head>
  <body data-locale="<%= I18n.locale %>">
    <%= render partial: 'shared/navbar' %>
    <div class="container-fluid">
      <div class="row">
        <div id="sidebar-container"
          class="col-sm-3 col-md-2 pt-3">
          <nav id="sidebar">
            <%= render partial: 'shared/sidebar',
                      locals: { lecture: @lecture || current_lecture } %>
          </nav>
        </div>
        <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
          <div class="alert alert-danger" id="js-messages" role="alert"
               style="display: none;">
          </div>
          <% if alert.present? %>
            <div class="alert alert-danger" role="alert">
              <%= sanitize alert, :tags => %w(br) %>
            </div>
          <% end %>
          <% if notice.present? %>
            <div class="alert alert-secondary" role="alert">
              <%= sanitize notice, :tags => %w(br) %>
            </div>
          <% end %>
          <%= yield %>
        </main>
      </div>
    </div>
    <div id="modal-container"></div>
    <footer>
      <%= render partial: 'shared/footer' %>
    </footer>
  </body>
</html>
