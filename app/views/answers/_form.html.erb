<% id = answer.id || 0 %>
<%= form_with model: answer do |f| %>
  <div id="answer-value-<%= id %>" data-id="<%= id %>">
    <div class="mb-3">
      <label class="form-label"><%= t('admin.answer.correctness') %>:</label>
      <div class="form-check form-check-inline">
        <%= f.radio_button :value, true, class: 'form-check-input', id: 'answer-true-' + id.to_s %>
        <%= f.label :value, t('admin.answer.true_lc'), value: true, class: 'form-check-label', for: 'answer-true-' + id.to_s %>
      </div>
      <div class="form-check form-check-inline">
        <%= f.radio_button :value, false, class: 'form-check-input', id: 'answer-false-' + id.to_s %>
        <%= f.label :value, t('admin.answer.false_lc'), value: false, class: 'form-check-label', for: 'answer-false-' + id.to_s %>
      </div>
    </div>
  </div>
  <%= f.text_area :text,
                  id: 'tex-area-answer-' + id.to_s,
                  class: 'form-control' %>
  <% if id == 0 %>
    <%= t('admin.answer.preview_text') %>:
    <div  class="border bg-correct border-secondary rounded py-2 mb-2"
          id="answer-header-0">
      <span id="answer-box-0" class="me-2">
        <%= ballot_box(true) %>
      </span>
      <span id='tex-preview-answer-0'></span>
    </div>
  <% end %>
  <div class="mb-3">
    <%= f.label :explanation, t('admin.answer.explanation'), class: 'form-label' %>
    <%= f.text_area :explanation,
                    id: 'tex-area-explanation-' + id.to_s,
                    class: 'form-control' %>
  </div>
  <% if id == 0 %>
    <%= t('admin.answer.preview_explanation') %>:
    <div  class="border border-secondary rounded bg-light py-2">
      <span id="tex-preview-explanation-0">
      </span>
    </div>
  <% end %>
  <%= f.hidden_field :question_id,
                     value: question_id,
                     id: 'answer_' + id.to_s + '_question_id' %>
  <div class="text-center mt-4">
    <%= f.submit t('buttons.save'),
                 class: "btn btn-sm btn-primary" %>
    <% if id == 0 %>
      <button type="button"
              class="btn btn-sm btn-secondary ms-3"
              id="new-answer-cancel">
        <%= t('buttons.cancel') %>
      </button>
    <% end %>
  </div>
<% end %>
