  <div class="row pb-2">
    <div class="col-sm-12 col-md-12 col-lg-6">
      <ul class="nav">
        <li class="nav-item pr-1">
          <%= link_to t('reverse_order'),
                      lecture_food_path(@lecture,
                                        params: { project: params[:project],
                                                  lecture_id: params[:lecture_id],
                                                  reverse: !params[:reverse],
                                                  all: params[:all],
                                                  per: params[:per],
                                                  visibility: params[:visibility] }),
                      class: 'nav-link btn btn-sm bg-grey-lighten-4' %>
        </li>
        <li class="nav-item pl-1 pr-1">
          <% unless @media.page(1).total_pages == 1 || params[:all] %>
            <%= link_to t('all'),
                        lecture_food_path(@lecture,
                                          params: { project: params[:project],
                                                    lecture_id: params[:lecture_id],
                                                    reverse: params[:reverse],
                                                    all: true,
                                                    per: params[:per],
                                                    visibility: params[:visibility] }),
                        class: 'nav-link btn btn-sm text-primary bg-grey-lighten-4' %>
          <% end %>
        </li>
        <li class="nav-item pl-1 pr-1">
          <div class="dropdown pl-2">
            <button class="btn btn-sm dropdown-toggle text-primary" type="button"
                    data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
              <%= t('per_page') %>
            </button>
            <div class="dropdown-menu">
              <% [3,4,8,12,24,48].each do |hits| %>
                <%= link_to hits.to_s,
                            lecture_food_path(@lecture,
                                              params: { page: 1,
                                                        project: params[:project],
                                                        lecture_id: params[:lecture_id],
                                                        reverse: params[:reverse],
                                                        per: hits,
                                                        visibility: params[:visibility] }),
                            class: ['dropdown-item',
                                    params[:per] == hits ? 'active' : ''] %>
              <% end %>
            </div>
          </div>
        </li>
        <li class="nav-item pl-1">
          <div class="dropdown pl-2">
            <button class="btn btn-sm dropdown-toggle text-primary"
                    type="button"
                    id="media_visibility" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
              <%= t('basics.visibility') %>
            </button>
            <%= helpdesk(t('medium.info.visibility_html'), true) %>
            <div class="dropdown-menu">
              <%= link_to t('medium.theme_based'),
                          lecture_food_path(@lecture,
                                            params: { project: params[:project],
                                                      lecture_id: params[:lecture_id],
                                                      reverse: params[:reverse],
                                                      all: params[:all],
                                                      per: params[:per],
                                                      visibility: 'thematic' }),
                          class: ['dropdown-item',
                                  !params[:visibility].in?(['lecture', 'all']) ? 'active' : ''] %>
              <%= link_to t('medium.lecture_only'),
                          lecture_food_path(@lecture,
                                            params: { project: params[:project],
                                                      lecture_id: params[:lecture_id],
                                                      reverse: params[:reverse],
                                                      all: params[:all],
                                                      per: params[:per],
                                                      visibility: 'lecture' }),
                          class: ['dropdown-item',
                                  params[:visibility] == 'lecture' ? 'active' : ''] %>
              <%= link_to t('basics.all'),
                          lecture_food_path(@lecture,
                                            params: { project: params[:project],
                                                      lecture_id: params[:lecture_id],
                                                      reverse: params[:reverse],
                                                      all: params[:all],
                                                      per: params[:per],
                                                      visibility: 'all' }),
                          class: ['dropdown-item',
                                  params[:visibility] == 'all' ? 'active' : ''] %>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="col-sm-12 col-md-12 col-lg-6 pt-1">
      <% unless params[:all] %>
        <%= paginate @media, window: 2 %>
      <% end %>
    </div>
  </div>
  <% if @media.any? %>
    <%= render partial: 'media/media',
               locals: { media: @media,
                         tags: true,
                         lecture: @lecture } %>
  <% else %>
    <div class="alert alert-secondary mt-2 pr-2">
      <%= t('admin.medium.no_media') %>
      <% if @hidden %>
        <%= t('medium.improve_visibility', course: @lecture.course.title) %>
      <% end %>
    </div>
  <% end %>
  <% unless params[:all] %>
    <div class="row my-2">
      <div class="col-12">
        <%= paginate @media, window: 2 %>
      </div>
    </div>
  <% end %>