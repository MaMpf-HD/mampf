<div class="modal fade"
     id="statisticsModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="statisticsModalLabel" aria-hidden="true"
     data-backdrop="static"
     data-keyboard="true">
  <div class="modal-dialog <%= medium.sort == 'Quiz' ? 'modal-xxl' : 'modal-sm' %>"
       role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="statisticsModalLabel">
          <%= t("basics.statistics") %>
        </h5>
        <button type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close">
          <span aria-hidden="true">
            &times;
          </span>
        </button>
      </div>
      <div class="modal-body" id="statistics-modal-content">
      </div>
    </div>
  </div>
</div>