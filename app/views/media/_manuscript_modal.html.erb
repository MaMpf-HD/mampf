<div class="modal fade"
     id="manuscriptModal"
     tabindex="-1"
     role="dialog"
     style="max-height: 85vh;"
     aria-labelledby="manuscriptModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl"
       role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"
            id="manuscriptModalLabel">
          <%= t('admin.medium.manuscript.structure') %>
        </h5>
        <button type="button"
                class="close"
                aria-label="Close"
                data-dismiss="modal">
          <span aria-hidden="true">
            &times;
          </span>
        </button>
      </div>
      <div class="modal-body"
           id="manuscript-modal-content">
        <div class="mb-2">
          <% if manuscript.contradictions['version'].empty?%>
            <%= t('manuscript.version_correct',
                  current_version: DefaultSetting::MAMPF_STY_VERSION) %>
          <% elsif manuscript.contradictions['version'].first.present? %>
            <span class="redtext">
              &#x26a1;
              <%= t('manuscript.version_info_html',
                    version: manuscript.contradictions['version'].first,
                    current_version: DefaultSetting::MAMPF_STY_VERSION,
                    package: link_to(t('here'),
                               '/mampf.sty',
                               download: 'mampf.sty')) %>
            </span>
          <% else %>
            <span class="redtext">
              &#x26a1;
              <%= t('manuscript.version_unknown_html',
                    current_version: DefaultSetting::MAMPF_STY_VERSION,
                    package: link_to(t('here'),
                               '/mampf.sty',
                               download: 'mampf.sty')) %>
            </span>
          <% end %>
        </div>
        <%= render partial: 'media/destination_cards',
                   locals: { manuscript: manuscript} %>
        <%= render partial: 'media/manuscript_comments',
                   locals: { manuscript: manuscript} %>
      </div>
    </div>
  </div>
</div>