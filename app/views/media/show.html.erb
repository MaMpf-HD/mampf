<div class="row">
  <div class="col-10">
    <h2>
      <span class="badge badge-secondary mr-3">
        Medium <%= '#' + @medium.id.to_s %>
      </span>
      <%= @medium.caption %>
    </h2>
  </div>
  <div class="col-2 text-right">
    <% if current_user.admin ||
          @medium.edited_with_inheritance_by?(current_user) %>
      <%= link_to 'Bearbeiten', edit_medium_path(@medium),
                  class: 'btn btn-outline-primary' %> 
    <% end %>
  </div>
</div>
<div class="row pb-2">
  <div class="col-12 col-md-6 col-lg-4 pt-3">
    <%= render partial: 'media/organizational',
               locals: { medium: @medium } %>
  </div>
  <div class="col-12 col-md-6 col-lg-4 pt-3">
    <%= render partial: 'media/technical',
               locals: { medium: @medium } %>
  </div>
  <% unless @medium.tags.empty? %>
    <div class="col-12 col-md-6 col-lg-4 pt-3">
      <%= render partial: 'tags/tags',
                 locals: { related_tags: @medium.tags,
                           tags_description: 'VerknÃ¼pfte Begriffe'} %>
    </div>
  <% end %>
</div>
<% linked_media = current_user.filter_media(@medium.linked_media) %>
<% unless linked_media.empty? %>
  <div class="row">
    <div class="col-12 pt-2">
      <h5>VerknÃ¼pfte Medien</h5>
    </div>
  </div>
  <%= render partial: 'media/media', locals: { media: linked_media} %>
<% end %>
