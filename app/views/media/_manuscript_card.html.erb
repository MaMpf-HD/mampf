<div class="card bg-mdb-color-lighten-6">
  <div class="card-header">
    <div class="row">
      <div class="col-6">
        Manuskript
      </div>
      <div class="col-6">
        <div class="media-card-header">
          <a href="<%= medium.manuscript_url %>"
             class="no-deco mr-2"
             target="_blank">
            <i class="material-icons text-dark"
               data-toggle="tooltip"
               data-placement="bottom"
               title="pdf im Browser">
              library_books
            </i>
          </a>
          <div class="download-button">
            <a href="<%= medium.manuscript_download_url %>"
               download="<%= manuscript_download_file(medium) %>">
              <span>
                <span class="badge badge-light"
                      data-toggle="tooltip"
                      data-placement="bottom"
                      title="Manuskript speichern">
                  &darr;pdf
                </span>
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= link_to image_tag(medium.manuscript_screenshot_url,
                        class: 'card-img-top manuscript-thumbnail'),
              medium.manuscript_url,
              target: :blank %>
  <div class="card-body">
    <div class="row">
      <div id="manuscript-meta" class="col-12 rounded">
        <div class="row">
          <div class="col-12">
            Länge:
            <span id="manuscript-pages">
              <%= medium.manuscript_pages.to_s + ' S' %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            Größe:
            <span id="manuscript-size">
              <%= number_to_human_size(medium.manuscript_size) %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>