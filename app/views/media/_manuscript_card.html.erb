<div class="card bg-light">
  <div class="card-header bg-generic-card-header">
    <div class="row">
      <div class="col-6">
        <h5>
          <%= t('manuscript.manuscript') %>
        </h5>
      </div>
      <div class="col-6">
        <div class="media-card-header">
          <a href="<%= display_medium_path(medium) %>"
             class="no-deco mr-2"
             target="_blank">
            <i class="material-icons text-dark"
               data-toggle="tooltip"
               data-placement="bottom"
               title="<%= t('manuscript.view') %>">
              library_books
            </i>
          </a>
          <div class="download-button">
            <a href="<%= medium.manuscript_download_url %>"
               download="<%= manuscript_download_file(medium) %>"
               class="triggerDownload"
               data-medium="<%= medium.id %>"
               data-sort="manuscript">
              <span>
                <span class="badge badge-light"
                      data-toggle="tooltip"
                      data-placement="bottom"
                      title="<%= t('manuscript.download') %>">
                  &darr;pdf
                </span>
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= link_to image_tag(medium.manuscript_screenshot_url,
                        class: 'card-img-top manuscript-thumbnail'),
              medium.manuscript_url_with_host,
              target: :blank %>
  <div class="card-body">
    <div class="row">
      <div id="manuscript-meta" class="col-12 rounded">
        <div class="row">
          <div class="col-12">
            <%= t('manuscript.length') %>:
            <span id="manuscript-pages">
              <%= "#{medium.manuscript_pages} #{t('manuscript.pages')}" %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <%= t('manuscript.size') %>:
            <span id="manuscript-size">
              <%= number_to_human_size(medium.manuscript_size) %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>