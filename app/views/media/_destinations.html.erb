<div id="destinations_accordion"
     role="tablist">
  <div class="card bg-mdb-color-lighten-6">
    <div class="card-header"
         role="tab" id="destinations_heading">
      <div class="row">
        <div class="col-6">
          <h5 class="text-dark">
            Zielpunkte im Manuskript
            <%= ' (' + medium.manuscript_destinations.count.to_s + ') '%>
            <i class="far fa-question-circle helpdesk"
               tabindex="-1"
               data-toggle="popover"
               data-trigger="focus"
               title="Info"
               data-content="Dies ist eine Liste aller named destinations
               aus dem Manuskript. Diese können im Thyme-Editor als
               Sprungstellen für Referenzen in das Manuskript benutzt werden.">
            </i>
          </h5>
        </div>
        <div class="col-6 text-right">
          <a class="btn btn-primary"
             data-toggle="collapse"
             href="#destinations_collapse"
             aria-expanded="false" aria-controls="destinations_collapse">
            Ein-/Ausklappen
          </a>
        </div>
      </div>
    </div>
    <div id="destinations_collapse"
         class="collapse"
         role="tabpanel"
         aria-labelledby="heading"
         data-parent="#destinations_accordion">
      <div class="card-body" id="destinationsCardBody">
        <div class="row">
          <div class="col-12">
            <div class="row mx-2 px-4 py-3">
              <div class="col-2">
                <strong>
                  Titel
                </strong>
              </div>
              <div class="col-2">
                <strong>
                  Label
                </strong>
              </div>
              <div class="col-2">
                <strong>
                  Typ
                </strong>
              </div>
              <div class="col-4">
                <strong>
                  Beschreibung
                </strong>
              </div>
              <div class="col-2">
                <strong>
                  Seite
                </strong>
              </div>
            </div>
            <% medium.manuscript_destinations.each do |d| %>
              <div class="row border-bottom mx-2 px-4 py-2">
                <% data = medium.manuscript_destination(d) %>
                <div class="col-2">
                  <%= link_to d,
                              display_medium_path(medium,
                                                  params: { destination: d }),
                              target: :blank,
                              class: "badge badge-light" %>
                </div>
                <div class="col-2">
                  <%= data['label'] %>
                </div>
                <div class="col-2">
                  <%= data['sort'] %>
                </div>
                <div class="col-4">
                  <%= data['description'] %>
                </div>
                <div class="col-2">
                  <%= data['page'] %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
