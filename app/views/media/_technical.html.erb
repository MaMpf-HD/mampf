<div class="card bg-teal-lighten-5">
  <div class="card-header bg-teal-darken-1"><h5 class="text-light">Technisches</h5></div>
  <div class="card-body">
  <ul class="list-group list-group-flush">
  <% if medium.video_stream_link.present? %>
  <li class="list-group-item bg-teal-lighten-5">
  <%= link_to 'Video-Stream', medium.video_stream_link, class: "btn btn-info", target: :_blank %>
  <ul>
  <li>Länge: <%= medium.length %></li>
  <li>eingebettete Breite: <%= medium.embedded_width.to_s + ' px'%></li>
  <li>eingebettete Höhe: <%= medium.embedded_height.to_s + ' px'%></li>
  <li>Player: <%= medium.video_player %></li>
  </ul>
  </li>
  <% end %>
  <% if medium.video_file_link.present? %>
  <li class="list-group-item bg-teal-lighten-5">
  <%= link_to 'Videodatei', medium.video_file_link, class: "btn btn-info", target: :_blank %>
  <ul>
  <li>Dateigröße: <%= medium.video_size %></li>
  <li>Breite: <%= medium.width.to_s + ' px'%></li>
  <li>Höhe: <%= medium.height.to_s + ' px'%></li>
  </ul>
  </li>
  <% end %>
  <% if medium.manuscript_link.present? %>
  <li class="list-group-item bg-teal-lighten-5"><%= link_to 'Manuskript', medium.manuscript_link, class: "btn btn-info", target: :_blank %>
  <ul>
  <li>Länge: <%= medium.pages.to_s + ' S' %></li>
  <li>Dateigröße: <%= medium.manuscript_size %></li>
  </ul>
  </li>
  <% end %>
  <% if medium.external_reference_link.present? %>
  <li class="list-group-item bg-teal-lighten-5"><%= link_to 'externer Link', medium.external_reference_link, class: "btn btn-info", target: :_blank %></li>
  <% end %>
  </ul>
</div>
</div>
