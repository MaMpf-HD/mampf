<div class="modal fade"
     id="destinationWarningModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="destinationWarningModalLabel" aria-hidden="true"
     data-keyboard="false"
     data-backdrop="static">
  <div class="modal-dialog"
       role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"
            id="destinationWarningModalLabel">
          <%= t('basics.note') %>: <%= t('manuscript.quarantine') %>
        </h5>
      </div>
      <div class="modal-body">
        <%= t('manuscript.quarantine_about') %>
        <div id="quarantineDestinations">
        </div>
        <%= t('manuscript.quarantine_info') %>
        <div class="row mt-3">
          <div class="col-12 text-center">
            <button id="keep-old-destinations"
                    type="button"
                    class="btn btn-sm btn-secondary">
              <%= t('buttons.okay') %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
