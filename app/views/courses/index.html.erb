<div class="row mt-3 p-2">
  <div class="col-10">
    <h4>
      Modul√ºbersicht
    </h4>
  </div>
  <div class="col-2">
    <% if current_user.admin? %>
      <%= link_to 'Modul anlegen', new_course_path,
                  class: 'btn btn-secondary',
                  remote: true,
                  id: 'create-new-course' %>
    <% end %>
  </div>
</div>
<div id="new-course-area" style="display: none;">
  <%= render partial: 'courses/new',
             locals: { course: Course.new } %>
</div>
<div class="row p-2">
  <div class="col-8">
  </div>
  <div class="col-4 text-right">
    <%= paginate @courses %>
  </div>
</div>
<div class="row bg-mdb-color-lighten-2 mx-2 px-4 py-3">
  <div class="col-3 text-light">
    <strong>
      Titel
    </strong>
  </div>
  <div class="col-3 text-light">
    <strong>
      Editoren
    </strong>
  </div>
  <div class="col-3 text-light">
    <strong>
      Vorlesungen
    </strong>
  </div>
  <div class="col-3 text-light">
    <strong>
      Aktionen
    </strong>
  </div>
</div>
<% @courses.each do |c| %>
  <div class="row border-bottom mx-2 px-4 <%= c.edited_by?(current_user) ? 'bg-light' : '' %>" 
       id="row-course-<%= c.id %>">
    <%= render partial: 'courses/row', locals: { course: c }%>
  </div>
<% end %>
