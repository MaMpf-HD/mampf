  <div class="col-2">
    <% if current_user.admin? %>
      <%= link_to 'Modul anlegen', new_course_path,
                  class: 'btn btn-secondary',
                  id: 'create-new-course' %>
    <% end %>
  </div>
</div>
<div id="row-new-course" class="border-bottom" style="display: none;" >
</div>
<% @courses.each do |c| %>
  <div class="row border-bottom px-4" id="row-course-<%= c.id %>">
    <%= render partial: 'courses/row', locals: { course: c }%>
  </div>
<% end %>
