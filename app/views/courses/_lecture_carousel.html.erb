<div id="lectureCarousel" class="carousel slide" data-ride="carousel"
     data-interval="false">
  <% if lectures.count > 1 %>
    <div class="row mt-5">
      <div class="col-12">
        <ol class="carousel-indicators">
          <% lectures.each_with_index do |l, i| %>
            <% is_active = l.active?(current_user, params[:active].to_i) %>
            <li data-target="#lectureCarousel" data-slide-to="<%= i %>"
                class="<%= active(is_active) %>">
            </li>
          <% end %>
        </ol>
      </div>
    </div>
  <% end %>
  <div class="carousel-inner">
    <% lectures.each do |l| %>
      <% is_active = l.active?(current_user, params[:active].to_i) %>
      <div class="carousel-item <%= active(is_active) %>"
           data-term="<%= l.term.to_label %>"
           data-teacher="<%= l.teacher.name %>"
           data-id="<%= l.teacher.id %>">
        <div class="row">
          <% unless l.chapters.empty? %>
            <div class="col-12 col-md-12 col-lg-6 pt-3">
              <%= render partial: 'lectures/content',
                         locals: { lecture: l } %>
            </div>
          <% end %>
          <% unless l.lessons.empty? %>
            <div class="col-12 col-md-12 col-lg-6 pt-3">
              <%= render partial: 'lessons/lessons',
                         locals: { lessons: l.lessons,
                                   lessons_description: 'VerknÃ¼pfte Sitzungen' } %>
            </div>
          <% end %>
        </div>
        <% unless l.tags.empty? %>
          <div class="row pt-5 pb-3">
            <div class="col-12">
              <%= render partial: 'tags/tags_toggle',
                         locals: { tags: l.tags,
                                   tags_description: 'VerknÃ¼pfte Begriffe',
                                   id: l.id,
                                   inspection: false } %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
