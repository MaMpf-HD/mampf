<%= render(SearchForm::Form.new(
  url: search_courses_path,
  context: 'courses'
)) do |c| %>

  <% c.with_field(SearchForm::Filters::EditorFilter.new) %>

  <% c.with_field(SearchForm::Filters::ProgramFilter.new) %>

  <% c.with_field(SearchForm::Filters::FulltextFilter.new) %>

  <% c.with_field(SearchForm::Fields::PerPageField.new(
    per_options: hits_per_page(true),
    default: default_hits_per_page(true)
  )) %>

  <% c.with_field(SearchForm::Filters::TermIndependenceFilter.new) %>

  <% c.with_footer(results_container_id: "course-search-results") %>
<% end %>