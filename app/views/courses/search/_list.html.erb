<div class="row bg-mdb-color-lighten-5 mx-2 px-4 py-3">
  <div class="col-3">
    <strong>
      <%= t('basics.title') %>
    </strong>
  </div>
  <div class="col-4">
    <strong>
      <%= t('basics.division') %>
    </strong>
  </div>
  <div class="col-3">
    <strong>
      <%= t('basics.editors') %>
    </strong>
  </div>
  <div class="col-2">
    <strong>
      <%= t('basics.action') %>
    </strong>
    <%= helpdesk(t('admin.course.info.action'), false) %>
  </div>
</div>
<% courses.each do |c| %>
  <div class="row border-bottom mx-2 px-4 py-2">
    <div class="col-3">
      <%= c.course.title %>
    </div>
    <div class="col-4">
      <div class="row">
        <% c.divisions.each do |d| %>
          <div class="col-12">
            <%= d.name_with_program %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-3">
      <%= c.editors.map(&:name).join(', ') %>
    </div>
    <div class="col-2">
      <% if current_user.can_edit?(c) %>
        <%= course_edit_icon(c) %>
      <% end %>
    </div>
  </div>
<% end %>
<div class="row my-3">
</div>