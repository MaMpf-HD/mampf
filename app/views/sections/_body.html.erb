<%= form_with model: section,
              html: { id: 'section-form-' + section.id.to_i.to_s,
                      data: { id: section.id } } do |f| %>
  <div class="row">
    <div class="col-12 text-right mb-2">
      <div id="section-basics-warning-<%= section.id.to_i %>"
           class="section-basics-warning"
           style="display: none;">
        Achtung, es gibt ungespeicherte Ã„nderungen!
        <%= f.submit "Speichern", class: "btn btn-sm btn-primary ml-2" %>
        <button type="button" class="btn btn-sm btn-secondary ml-2"
                id="section-basics-cancel-<%= section.id.to_i %>"
                data-id="<%= section.id %>">
          verwerfen
        </button>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col-6 form-group">
      <%= f.label :title, 'Titel' %>
      <%= f.text_field :title, { class: 'form-control',
                                 id: 'section_title_' + section.id.to_i.to_s,
                                 data: { id: section.id.to_i } } %>
      <div class="invalid-feedback"
           id="section-title-error-<%= section.id.to_i %>">
      </div>
    </div>
    <div class="col-2 form-group">
      <%= f.label :displayed_number, 'Nummer' %>
      <%= f.text_field :displayed_number,
                         { class: 'form-control', disabled: true,
                           id: 'section_number_' + section.id.to_i.to_s } %>
    </div>
    <div class="col-4 form-group">
      <%= f.label :display_number,
                  'Anzeigenummer (falls verschieden von Nummer)' %>
      <%= f.text_field :display_number,
                       { class: 'form-control',
                         id: 'section_number_alt_' + section.id.to_i.to_s,
                         data: { id: section.id.to_i } } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tag_ids, 'VerknÃ¼pfte Tags' %>
    <button type="button" class="btn btn-sm ml-2 btn-outline-secondary"
            id="new-tag-button-<%= section.id.to_i.to_s %>"
            data-course="<%= section.chapter.lecture.course.id %>">
            Tag anlegen
    </button>
    <button type="button" class="btn btn-sm ml-2 btn-outline-secondary"
            id="section-tag-links-<%= section.id.to_i.to_s %>"
            data-id="<%= section.id %>">
            Tag-Links einblenden
    </button>
    <%= f.select :tag_ids,
                 options_for_select(Tag.select_by_title,section.tag_ids),
                 {}, { multiple: true,
                       class: 'selectize mt-2',
                       data: { id: section.id.to_i },
                       id: 'section_tag_ids_' + section.id.to_i.to_s } %>
    <div class="invalid-feedback"
         id="section-tags-error-<%= section.id.to_i %>">
    </div>
    <div id="section-tag-list-<%= section.id.to_i.to_s %>"
         data-show="0">
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tag_ids, 'Sitzungen' %>
    <%= f.select :lesson_ids,
                 options_for_select(Lesson.select_by_date, section.lesson_ids),
                 {}, { multiple: true,
                       class: 'selectize mt-2',
                       data: { id: section.id.to_i },
                       id: 'section_lesson_ids_' + section.id.to_i.to_s } %>
    <div class="invalid-feedback"
         id="section-lessons-error-<%= section.id.to_i %>">
    </div>
  </div>
<% end %>
