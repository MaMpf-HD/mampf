<div class="row">
  <div class="col-12">
    <h2><span class="badge badge-secondary mr-3">Abschnitt</span><%= @section.to_label %></h2>
  </div>
</div>
<div class="row">
    <div class="col-12">
      Vorlesung:
      <%= link_to @section.lecture.to_label, @section.lecture %>
    </div>
</div>
<div class="row">
    <div class="col-12 col-md-6 col-lg-4 pt-3">
      <%= render partial: 'tags/tags', locals: { related_tags: @section.tags,
                                                 tags_description: 'Verknüpfte Begriffe' } %>
    </div>
    <div class="col-12 col-md-6 col-lg-4 pt-3">
      <%= render partial: 'lessons/lessons', locals: { lessons: @section.lessons,
                                                       lessons_description: 'Verknüpfte Sitzungen' } %>
    </div>
</div>
