<div class="card bg-brown-lighten-4">
  <div class="card-header bg-brown-darken-2">
    <h5 class="text-light">
      Verknüpfte Abschnitte
    </h5>
  </div>
  <div class="card-body"
       id="relatedSectionsBody">
    <% if sections.present? %>
      <ul>
        <% sections.each do |s| %>
          <li>
            <%= s.lecture.short_title + ': ' %>
            <%= link_to s.to_label,
                        section_path(s),
                        class: 'text-dark' %>
          </li>
        <% end %>
      </ul>
    <% else %>
      Es sind keine verknüpften Abschnitte vorhanden.
    <% end %>
  </div>
</div>