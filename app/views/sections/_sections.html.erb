<div class="card bg-light">
  <div class="card-header bg-generic-card-header">
    <h5>
      <%= t('related_sections') %>
    </h5>
  </div>
  <div class="card-body"
       id="relatedSectionsBody">
    <% if sections.present? %>
      <ul>
        <% sections.each do |s| %>
          <li>
            <%= s.lecture.short_title + ': ' %>
            <%= link_to s.to_label,
                        section_path(s),
                        class: 'text-dark' %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <%= t('no_related_sections') %>
    <% end %>
  </div>
</div>