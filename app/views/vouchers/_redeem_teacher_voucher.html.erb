<% if current_user == voucher.lecture.teacher %>

  <p>
    <%= t('profile.already_teacher_html', lecture: voucher.lecture.title) %>
    <%= cancel_voucher_button %>
  </p>

<% else %>

  <p data-cy="redeem-voucher-text">
    <%= t('profile.become_teacher_html', lecture: voucher.lecture.title) %>
    <%= redeem_voucher_button(voucher) %>
    <%= cancel_voucher_button %>
  </p>

<% end %>
