<p>
  <%= t('erdbeere.select_structures') %>
  <%= helpdesk(t('erdbeere.info.structures'), false) %>
</p>
<%= form_with model: lecture,
              html: { id: 'lecture-structures-form' } do |f| %>
  <% all_structures.each do |s| %>
    <div class="form-check">
      <%= f.check_box "structures[#{s['id']}]",
                      class: 'form-check-input',
                      checked: s['id'].to_i.in?(@structure_ids) %>
      <%= f.label "structures[#{s['id']}]",
                  s['attributes']['name'],
                  { class: 'form-check-label'} %>
    </div>
  <% end %>
  <div class="row mt-2">
    <div class="col-12 text-center">
      <%= f.submit t('buttons.save'),
                   class: 'btn btn-sm btn-primary' %>
      <a class="btn btn-sm btn-secondary" role="button"
         id="erdbeere-structures-cancel">
        <%= t('buttons.cancel') %>
      </a>
    </div>
  </div>
<% end %>