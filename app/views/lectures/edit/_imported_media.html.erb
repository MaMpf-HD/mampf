<div class="card bg-light">
    <div class="card-header clickable"
         role="tab"
         id="imported_media_heading"
         data-toggle="collapse"
         data-target="#imported_media_collapse"
         aria-expanded="false" aria-controls="imported_media_collapse">
      <div class="row">
        <div class="col-12">
          <h5 id="importMedia"
              data-lecture="<%= lecture.id %>">
            <%= t('admin.lecture.imported_media') %>
            <span id="importedMediaCount">
              (<%= lecture.imported_media.size %>)
            </span>
          </h5>
        </div>
      </div>
    </div>
    <div id="imported_media_collapse"
         class="collapse"
         role="tabpanel"
         aria-labelledby="heading"
         data-parent="#lectureAccordion">
      <div class="card-body">
        <div id="importedMediaTable"
             data-nomedia="<%= t('admin.lecture.no_imported_media') %>">
          <%= render partial: 'lectures/import/imported_media',
                     locals: { media: lecture.imported_media,
                               lecture: lecture } %>
        </div>
        <div class="row mb-2">
          <div class="col-12 text-center">
            <button role="button"
                    class="btn btn-sm btn-secondary"
                    id="import-media-button">
              <%= t('buttons.import_media') %>
            </button>
          </div>
        </div>
        <div id="importedMediaArea">
          <hr>
          <%= render partial: 'media/catalog/search_form',
                     locals: { purpose: 'import' } %>
          <div id="media-search-results">
          </div>
        </div>
      </div>
    </div>
</div>