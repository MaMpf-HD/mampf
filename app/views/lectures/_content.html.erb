<div class="card bg-mdb-color-lighten-4">
  <div class="card-header">
    <h5>
      Vorlesungsinhalt
    </h5>
  </div>
  <div class="card-body">
    <div class="card-columns">
      <% lecture.chapters.each do |c| %>
        <div class="card bg-mdb-color-lighten-5">
          <div class="card-header">
            <%= link_to c.to_label, chapter_path(c), class: 'text-dark' %>
          </div>
          <div class="card-body">
          <ul class="list-group list-group-flush">
            <% c.sections.each do |s| %>
              <li class="list-group-item bg-mdb-color-lighten-5">
                <div class="row">
                  <div class="col-6">
                    <%= link_to s.to_label, section_path(s), class:'text-dark' %>
                  </div>
                  <div class="col-6">
                    <% s.lessons.each do |l| %>
                      <%= link_to  l.date.day.to_s + '.' + l.date.month.to_s +
                                   '.' + l.date.year.to_s, lesson_path(l),
                                  class: 'badge badge-secondary' %>
                    <% end %>
                  </div>
                  <div class="col-12 mt-2">
                    <% s.tags.each do |t| %>
                      <%= link_to t.title, tag_path(t),
                                  class: "badge badge-light" %>
                    <% end %>
                  </div>
                </div>
              </li>
            <% end%>
          </ul>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
