<div class="card bg-light-blue-lighten-5 mb-3">
	<div class="card-header">
    <h5 id="activeAnnouncementsCounter">
      Mitteilungen
      <% if current_user.active_announcements(lecture).present? %>
	      <span>
  	     (<%= current_user.active_announcements(lecture).count %>)
    		</span>
    	<% end %>
    </h5>
	</div>
	<div class="card-body">
		<div class="list-group" style="max-height: 10vh; overflow-y: scroll;">
  		<% lecture.announcements.order(:created_at).reverse.each do |a| %>
    		<div class="list-group-item
    								<%= 'list-group-item-info' if a.active?(current_user) %>"
    				 data-listItemNotification="<%= current_user.matching_notification(a)&.id %>">
	      	<div class="row">
  	     		<%= render partial: 'announcements/row_for_lecture',
    	       		       locals: { announcement: a,
    	       		       					 lecture: lecture } %>
      		</div>
    		</div>
    	<% end %>
    </div>
  </div>
</div>