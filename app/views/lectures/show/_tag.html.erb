<%= link_to shorten(tag.title, 50),
            tag_path(tag),
            id: 'lecture-' + dom_id(tag),
            class: "badge bg-light text-dark lecture-tag tagbadge",
            title: (tag.title if tag.title.length > 50),
            data: { id: tag.id,
                    lessons: tag.lessons.map(&:id),
                    toggle: 'tooltip',
                    placement: 'bottom' } %>
<%= link_to shorten(tag.title, 20),
            tag_path(tag),
            id: 'lecture-' + dom_id(tag),
            class: "badge bg-light text-dark lecture-tag tagbadgeshort",
            style: "display: none;",
            title: (tag.title if tag.title.length > 50),
            data: { id: tag.id,
                    lessons: tag.lessons.map(&:id),
                    toggle: 'tooltip',
                    placement: 'bottom' } %>