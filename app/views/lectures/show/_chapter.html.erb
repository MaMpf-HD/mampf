<div class="card bg-mdb-color-lighten-5">
  <div class="card-header bg-mdb-color-lighten-2">
    <span class="text-light">
      <%= chapter.to_label %>
    </span>
  </div>
  <div class="card-body">
    <% unless chapter.details.blank? %>
      <%= chapter.details.html_safe %>
    <% end %>
    <ul class="list-group list-group-flush">
      <%= render partial: 'lectures/show/section',
                 collection: chapter.sections
                                    .select { |c| c.hidden.in?([false, nil]) },
                 cached: true %>
    </ul>
  </div>
</div>