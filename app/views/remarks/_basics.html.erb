<%= bootstrap_form_with model: remark do |f| %>
  <div class="card-header">
    <div class="row">
      <div class="col-3">
        <h5>
          <%= t('basics.details') %>
        <h5>
      </div>
      <div class="col-5">
        <span class="no_display incorrect"
              id="remark-basics-warning">
          <%= t('warnings.unsaved_changes') %>
        </span>
      </div>
      <div class="col-4">
        <span class="no_display"
              id="remark-basics-options">
          <%= f.submit t('buttons.save'),
                       class: "btn btn-primary btn-sm" %>
          <button type="button"
                  class="btn btn-secondary btn-sm"
                  id="remark-basics-cancel"
                  data-id="<%= remark.id %>">
            <%= t('buttons.discard') %>
          </button>
        </span>
      </div>
    </div>
  </div>
  <div class="card-body p-2">
    <div id="tex-preview-remark-<%= remark.id %>"
         class="bg-remark border p-2 mb-3">
      <%= remark.text %>
    </div>
    <%= f.text_area :text, id: 'tex-area-remark-' + remark.id.to_s,
                           label: t('basics.latex'),
                           rows: 6 %>
    <% if current_user.admin %>
      <div class="row mb-3">
        <div class="col-12">
          <%= f.check_box :text_input,
                          label: t('admin.remark.text_input') %>
        </div>
      </div>
    <% end %>
    <%= render partial: 'remarks/options', locals: { remark: remark } %>
  </div>
<% end %>
