<div class="col-2">
  <%= user.name %>
</div>
<div class="col-3">
  <%= user.email %>
</div>
<div class="col-3">
  <% if user.admin? %>
    <span class="badge badge-info">
      Admin
    </span>
  <% end %>
  <% if user.editor? %>
    <span class="badge badge-info">
      EditorIn
    </span>
  <% end %>
  <% if user.teacher? %>
    <span class="badge badge-info">
      DozentIn
    </span>
  <% end %>
</div>
<div class="col-2 text-center">
  <%= user.edited_media.count %>
</div>
<div class="col-2">
  <%= link_to 'Bearbeiten', edit_user_path(user),
              class: 'btn btn-outline-primary my-1' %>
</div>
