<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-6">
        <h5>
          <%= t('admin.user.sorts') %>
          (<%= elevated_users.count %>)
        </h5>
      </div>
      <div class="col-6 text-right">
        <button type="button"
                class="btn btn-sm btn-outline-primary"
                data-toggle="modal"
                data-target="#genericUsersModal">
          <%= t('buttons.edit_users',
                count: generic_users_count) %>
        </button>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row bg-mdb-color-lighten-2 py-3">
      <div class="col-2 text-light">
        <strong>
          <%= t('basics.display_name') %>
        </strong>
      </div>
      <div class="col-3 text-light">
        <strong>
          <%= t('basics.email') %>
        </strong>
      </div>
      <div class="col-3 text-light">
        <strong>
          <%= t('basics.role') %>
        </strong>
      </div>
      <div class="col-2 text-light">
        <strong>
          <%= t('admin.user.edited_media') %>
        </strong>
      </div>
      <div class="col-2 text-light">
        <strong>
          <%= t('basics.action') %>
        </strong>
      </div>
    </div>
    <% elevated_users.each do |u| %>
      <div class="row border-bottom"
           id="row-user-<%= u.id %>">
        <%= render partial: 'users/row',
                   locals: { user: u }%>
      </div>
    <% end %>
  </div>
</div>
