<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-6">
        <h5>
          Admins, EditorInnen und  DozentInnen
          (<%= elevated_users.count %>)
        </h5>
      </div>
      <div class="col-6 text-right">
        <button id="open-generic-users-modal"
                type="button"
                class="btn btn-outline-primary">
          Sonstige NutzerInnen (<%= generic_users_count %>) bearbeiten
        </button>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row bg-mdb-color-lighten-2 py-3">
      <div class="col-2 text-light">
        <strong>
          Name
        </strong>
      </div>
      <div class="col-3 text-light">
        <strong>
          Email
        </strong>
      </div>
      <div class="col-3 text-light">
        <strong>
          Rolle
        </strong>
      </div>
      <div class="col-2 text-light">
        <strong>
          Editierte Medien
        </strong>
      </div>
      <div class="col-2 text-light">
        <strong>
          Aktion
        </strong>
      </div>
    </div>
    <% elevated_users.each do |u| %>
      <div class="row border-bottom"
           id="row-user-<%= u.id %>">
        <%= render partial: 'users/row',
                   locals: { user: u }%>
      </div>
    <% end %>
  </div>
</div>
