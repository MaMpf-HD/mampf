<% if user.teacher? %>
  Gehaltene Vorlesungen (<%= user.given_lectures.count %>):
  <ul>
    <% user.given_lectures.each do |l| %>
      <li>
        <%= l.title_term_info %>
      </li>
    <% end %>
  </ul>
<% end %>
<% if user.edited_courses.any? %>
  Editierte Kurse (<%= user.edited_courses.count %>):
  <ul>
    <% user.edited_courses.each do |c| %>
      <li>
        <%= link_to c.title, edit_course_path(c) %>
      </li>
    <% end %>
  </ul>
<% end %>
<% if user.edited_lectures.any? %>
  Editierte Vorlesungen (<%= user.edited_lectures.count %>):
  <ul>
    <% user.edited_lectures.each do |l| %>
      <li>
        <%= l.title_term_info %>
      </li>
    <% end %>
  </ul>
<% end %>
<% if user.edited_media.any? %>
  Editierte Medien (<%= user.edited_media.count %>):
  <ul class="nav nav-tabs mb-3" id="edited-media-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="kaviar-tab"
         data-toggle="tab" href="#kaviar-media" role="tab"
         aria-controls="kaviar-media" aria-selected="true">
        KaViaR (<%= user.edited_media.where(sort: 'Kaviar').count %>)
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="sesam-tab"
         data-toggle="tab" href="#sesam-media" role="tab"
         aria-controls="sesam-media" aria-selected="false">
        SeSAM  (<%= user.edited_media.where(sort: 'Sesam').count %>)
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="keks-tab"
         data-toggle="tab" href="#keks-media" role="tab"
         aria-controls="keks-media" aria-selected="false">
        KeKs (<%= user.edited_media.where(sort: ['KeksQuiz', 'KeksQuestion']).count %>)
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="kiwi-tab"
         data-toggle="tab" href="#kiwi-media" role="tab"
         aria-controls="kiwi-media" aria-selected="false">
        KIWi (<%= user.edited_media.where(sort: 'Kiwi').count %>)
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="erdbeere-tab"
         data-toggle="tab" href="#erdbeere-media" role="tab"
         aria-controls="erdbeere-media" aria-selected="false">
        ErDBeere (<%= user.edited_media.where(sort: 'Erdbeere').count %>)
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="reste-tab"
         data-toggle="tab" href="#reste-media" role="tab"
         aria-controls="reste-media" aria-selected="false">
        RestE (<%= user.edited_media.where(sort: 'Reste').count %>)
      </a>
    </li>
  </ul>
  <div class="tab-content" id="edited-media-tabContent">
    <div class="tab-pane fade show active" id="kaviar-media"
         role="tabpanel" aria-labelledby="kaviar-tab">
      <ul>
        <% user.edited_media.where(sort: 'Kaviar').each do |m| %>
          <li>
            <%= m.title %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane fade" id="sesam-media"
         role="tabpanel" aria-labelledby="sesam-tab">
      <ul>
        <% user.edited_media.where(sort: 'Sesam').each do |m| %>
          <li>
            <%= m.title %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane fade" id="keks-media" role="tabpanel"
         aria-labelledby="keks-tab">
      <ul>
        <% user.edited_media.where(sort: ['KeksQuiz', 'KeksQuestion']).each do |m| %>
          <li>
            <%= m.title %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane fade" id="kiwi-media" role="tabpanel"
         aria-labelledby="kiwi-tab">
      <ul>
        <% user.edited_media.where(sort: 'Kiwi').each do |m| %>
          <li>
            <%= m.title %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane fade" id="erdbeere-media" role="tabpanel"
         aria-labelledby="erdbeere-tab">
      <ul>
        <% user.edited_media.where(sort: 'Erdbeere').each do |m| %>
          <li>
            <%= m.title %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane fade" id="reste-media" role="tabpanel"
         aria-labelledby="reste-tab">
      <ul>
        <% user.edited_media.where(sort: 'Reste').each do |m| %>
          <li>
            <%= m.title %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
