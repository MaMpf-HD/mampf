<div class="row">
  <div class="col-12">
    <h2>
      <span class="badge badge-secondary mr-3">
        Kapitel
      </span>
      <%= @chapter.to_label %>
    </h2>
  </div>
</div>
<div class="row">
  <div class="col-12">
    Vorlesung:
    <% if current_user.lectures.include?(@chapter.lecture) %>
      <%= link_to @chapter.lecture.title,
                  @chapter.lecture.path(current_user) %>
    <% else %>
      <span>
        <%= @chapter.lecture.title %>
      </span>
    <% end %>
  </div>
</div>
<% unless @chapter.sections.empty? && @chapter.tags.empty? &&
          @chapter.lessons.empty? %>
  <div class="row mb-2">
    <% unless @chapter.sections.empty? %>
      <div class="col-12 col-md-6 col-lg-4 pt-3">
        <%= render partial: 'sections/sections',
                   locals: { sections: @chapter.sections } %>
      </div>
    <% end %>
    <% unless @chapter.tags.empty? %>
      <div class="col-12 col-md-6 col-lg-4 pt-3">
        <%= render partial: 'tags/tags',
                   locals: { related_tags: @chapter.tags,
                             tags_description: 'Verknüpfte Begriffe' } %>
      </div>
    <% end %>
    <% unless @chapter.lessons.empty? %>
      <div class="col-12 col-md-6 col-lg-4 pt-3">
        <%= render partial: 'lessons/lessons',
                   locals: { lessons: @chapter.lessons,
                             lessons_description: 'Verknüpfte Sitzungen' } %>
      </div>
    <% end %>
  </div>
<% end %>
