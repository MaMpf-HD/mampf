<hr>
<div class="row">
  <div class="col-12">
    <h6>
      Kapitel anlegen
    </h6>
  </div>
</div>
<%= form_with model: chapter do |f| %>
  <div class="form-row">
    <div class="col-6 form-group">
      <%= f.label :title, 'Titel' %>
      <%= f.text_field :title, { class: 'form-control',
                                 id: 'new_chapter_title' } %>
      <div class="invalid-feedback"
           id="new-chapter-title-error">
      </div>
    </div>
    <% if lecture.chapters.present? %>
      <div class="col-6 form-group">
        <%= f.label :predecessor,
                    'EinfÃ¼gen nach Kapitel' %>
        <%= f.select :predecessor,
                     options_for_select([['am Anfang', 0]] + lecture.select_chapters,
                                        lecture.last_chapter_by_position.position) ,
                                 {}, { class: 'form-control' } %>
      </div>
    <% end %>
  </div>
  <%= f.hidden_field :lecture_id, value: lecture.id %>
  <div class="row">
    <div class="col-12 text-center">
      <%= f.submit 'Speichern', class: 'btn btn-primary' %>
      <button type="button" id="cancel-new-chapter"
              class="btn btn-secondary">
        abbrechen
      </button>
    </div>
  </div>
<% end %>
<hr>
