<ul class="list-group mt-3">
  <li class="list-group-item bg-light">
    <div class="row">
      <b class="col-3">
        Team
      </b>
      <b class="col-3">
        Abgabe
      </b>
      <b class="col-3">
        Korrektur
      </b>
      <b class="col-3">
        Aktionen
      </b>
    </div>
  </li>
  <% stack.each do |s| %>
    <li class="list-group-item submission-row"
        data-id="<%= s.id %>">
      <div class="row">
        <div class="col-3">
          <%= s.users.map(&:name).join(', ') %>
        </div>
        <div class="col-3">
          <%= link_to t('buttons.download'),
                      show_submission_manuscript_path(s,
                                                      params:
                                                        { download: 'true' }),
                      class: 'btn btn-sm btn-outline-secondary',
                      data: { turbolinks: false } %>
          <%= link_to t('buttons.show'),
                      show_submission_manuscript_path(s),
                      class: 'btn btn-sm btn-outline-secondary',
                      data: { turbolinks: false } %>
        </div>
        <div class="col-3 correction-column"
             data-id="<%= s.id %>">
          <%= render partial: 'submissions/correction',
                     locals: { submission: s } %>
        </div>
        <div class="col-3 submission-actions"
             data-id="<%= s.id %>">
          <%= render partial: 'submissions/other_actions',
                     locals: { submission: s } %>
        </div>
      </div>
    </li>
  <% end %>
</ul>