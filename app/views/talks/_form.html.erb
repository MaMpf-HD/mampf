<%= form_with model: talk, html: { id: 'talk-form' } do |f| %>
  <div class="row px-2 py-2 mt-2">
    <div class="col-12 col-lg-4">
      <h4 class="pl-2">
        <span class="badge badge-secondary">
          <%= t('basics.talk') %>
        </span>
        <%= talk.to_label %>
      </h4>
    </div>
    <div class="col-12 col-lg-4">
      <div id="talk-basics-warning">
        <%= t('warnings.unsaved_changes') %>
        <%= f.submit t('buttons.save'),
                     class: 'btn btn-sm btn-primary' %>
        <button type="button"
                class="btn btn-sm btn-secondary ml-2"
                id="cancel-talk-edit">
          <%= t('buttons.discard') %>
        </button>
      </div>
    </div>
    <div class="col-12 col-lg-4 text-right">
      <%= link_to t('buttons.parent_lecture'),
                  edit_lecture_path(talk.lecture),
                  class: 'btn btn-sm btn-outline-primary mb-2' %>
      <%= link_to t('buttons.delete'),
                  talk_path(talk),
                  method: :delete,
                  data: { confirm: t('confirmation.generic') },
                  class: 'btn btn-sm btn-danger mb-2' %>
    </div>
  </div>
  <div class="row p-2">
    <div class="col-6">
      <%= render partial: 'talks/basics',
                 locals: { talk: talk,
                           f: f } %>
    </div>
    <div class="col-6">
      <%= render partial: 'talks/content',
                 locals: { talk: talk,
                           f: f } %>
    </div>
  </div>
<% end %>
