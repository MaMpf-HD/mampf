<%= form_with model: talk, html: { id: 'talk-form' } do |f| %>
  <div class="row px-2 py-2 mt-2">
    <div class="col-12 col-lg-4">
      <h4 class="ps-2">
        <span class="badge bg-secondary">
          <%= t('basics.talk') %>
        </span>
        <%= talk.to_label %>
        <%= link_to '',
                    talk_path(@talk),
                    class: 'fas fa-eye text-dark mt-3',
                    data: { toggle: 'tooltip',
                            placement: 'bottom' },
                    title: t('buttons.show'),
                    style: 'text-decoration: none;' %>
      </h4>
    </div>
    <div class="col-12 col-lg-4">
      <div id="talk-basics-warning">
        <%= t('warnings.unsaved_changes') %>
        <%= f.submit t('buttons.save'),
                     class: 'btn btn-sm btn-primary' %>
        <button type="button"
                class="btn btn-sm btn-secondary ms-2"
                id="cancel-talk-edit">
          <%= t('buttons.discard') %>
        </button>
      </div>
    </div>
    <div class="col-12 col-lg-4 text-end">
      <%= link_to t('buttons.parent_lecture'),
                  edit_lecture_path(talk.lecture),
                  class: 'btn btn-sm btn-outline-primary mb-2' %>
      <%= link_to t('buttons.delete'),
                  talk_path(talk),
                  method: :delete,
                  data: { confirm: t('confirmation.generic') },
                  class: 'btn btn-sm btn-danger mb-2' %>
    </div>
  </div>
  <div class="row p-2">
    <div class="col-6">
      <%= render partial: 'talks/basics',
                 locals: { talk: talk,
                           f: f } %>
    </div>
    <div class="col-6">
      <%= render partial: 'talks/content',
                 locals: { talk: talk,
                           f: f } %>
    </div>
  </div>
<% end %>
