<div class="modal fade"
     id="newAnnouncementModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="newAnnouncementModalLabel"
     aria-hidden="true">
  <div class="modal-dialog modal-lg"
       role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"
            id="newAnnouncementModalLabel">
          <%= t('buttons.create_announcement') %>
        </h5>
        <button type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close">
          <span aria-hidden="true">
            &times;
          </span>
        </button>
      </div>
      <div class="modal-body"
           id="new-announcement-modal-content">
      </div>
    </div>
  </div>
</div>
