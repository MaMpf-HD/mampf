<ul class="nav nav-pills mt-3" role="tablist">
  <li class="nav-item">
    <a class="nav-link <%= active(!@tags) %>" id="media-tab" data-bs-toggle="pill"
       href="#media_catalog">
      <%= t('admin.medium.media_search') %>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="teachable-tab" data-bs-toggle="pill"
       href="#teachable_search">
      <%= t('admin.teachables.teachables') %>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="course-tab" data-bs-toggle="pill"
       href="#course_search">
      <%= t('admin.teachables.courses') %>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link <%= active(@tags) %>" id="tags-tab" data-bs-toggle="pill"
       href="#tag_search">
      <%= t('admin.tag.index') %>
    </a>
  </li>
</ul>
<div class="tab-content">
  <div class="tab-pane fade <%= show_tab(!@tags) %>" id="media_catalog">
    <div class="row mt-3 p-2">
      <div class="col-12">
        <h4>
          <%= t('admin.medium.media_search') %>
        </h4>
      </div>
    </div>
    <%= render partial: 'search/media_search_form',
               locals: { purpose: 'media' } %>
    <div id="media-search-results">
    </div>
  </div>
  <div class="tab-pane fade" id="teachable_search">
    <div class="row mt-3 p-2">
      <div class="col-12">
        <h4>
          <%= t('admin.teachables.teachables') %>
        </h4>
      </div>
    </div>
    <div id="lectureSearchArea">
      <%= render partial: 'search/lecture_search_form',
                 locals: { results_as_list: true } %>
      <div id="lecture-search-results">
      </div>
    </div>
  </div>
  <div class="tab-pane fade" id="course_search">
    <div class="row mt-3 p-2">
      <div class="col-12">
        <h4>
          <%= t('admin.teachables.courses') %>
        </h4>
      </div>
    </div>
    <div id="courseSearchArea">
      <%= render partial: 'search/course_search_form' %>
      <div id="course-search-results">
      </div>
    </div>
  </div>
  <div class="tab-pane fade <%= show_tab(@tags) %>" id="tag_search">
    <div class="row mt-3 p-2">
      <div class="col-10">
        <h4>
          <%= t('admin.tag.index') %>
        </h4>
      </div>
      <div class="col-2">
        <%= link_to t('admin.tag.create'),
                    new_tag_path,
                    class: 'btn btn-sm btn-secondary',
                    id: 'create-new-tag' %>
      </div>
    </div>
    <%= render partial: 'search/tag_search_form' %>
    <div id="tag-search-results">
    </div>
  </div>
</div>
