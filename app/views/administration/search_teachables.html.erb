<div class="row mt-3 p-2">
  <div class="col-12">
    <h4>
      <%= t('admin.teachables.teachables') %>
    </h4>
  </div>
</div>
<div class="form-group"
     id="teachable_radio">
  <%= t('basics.search') %>
  <div class="custom-control custom-radio">
    <input type="radio"
           id="search_lecture_radio"
           name="search_teachable_radio"
           class="custom-control-input"
           checked>
    <label class="custom-control-label"
           for="search_lecture_radio">
      <%= t('basics.lectures') %>
    </label>
  </div>
  <div class="custom-control custom-radio">
    <input type="radio"
           id="search_course_radio"
           name="search_teachable_radio"
           class="custom-control-input">
    <label class="custom-control-label"
           for="search_course_radio">
      <%= t('basics.courses') %>
    </label>
  </div>
</div>
<div id="lectureSearchArea">
  <%= render partial: 'main/start/lecture_search',
             locals: { results_as_list: true } %>
  <div id="lecture-search-results">
  </div>
</div>
<div id="courseSearchArea"
     style="display: none;">
  <%= render partial: 'administration/index/course_search' %>
  <div id="course-search-results">
  </div>
</div>