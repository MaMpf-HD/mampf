<div class="list-group mb-2">
  <div class="list-group-item list-group-item-secondary">
    <div class="row">
      <div class="col-3">
        <%= t('admin.main.term_type') %>
      </div>
      <div class="col-6">
        <%= t('admin.main.title') %>
      </div>
      <% if teacher %>
        <div class="col-3">
          <%= t('admin.main.teacher') %>
        </div>
      <% end %>
    </div>
  </div>
  <% lectures.each do |l| %>
    <a href="<%= edit_lecture_path(l) %>"
       class="list-group-item list-group-item-action">
      <div class="row">
        <div class="col-2">
          <%= l.term_to_label_short %>
        </div>
        <div class="col-1">
          <%= l.sort_localized_short %>
        </div>
        <div class="col-6">
          <span class="<%= l.published? ? '' : 'unpublished' %>">
          <%= l.course.title %>
          </span>
        </div>
        <% if teacher %>
          <div class="col-3">
            <%= l.teacher&.name %>
          </div>
        <% end %>
      </div>
    </a>
  <% end %>
</div>
