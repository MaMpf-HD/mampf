<div class="card">
  <div class="card-header bg-teal-lighten-4">
    <%= t('admin.main.other_courses') %>
    (<%= other_courses.size %>)
    <%= helpdesk(t('admin.main.info.other_courses'), false) %>
  </div>
  <div class="card-body card-tiny">
    <% if other_courses.any? %>
      <%= render partial: 'administration/index/courses_card',
                 locals: { courses: other_courses.natural_sort_by(&:title) } %>
    <% else %>
      <%= t('admin.main.no_other_courses') %>
    <% end %>
  </div>
</div>