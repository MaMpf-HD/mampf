<div id="<%= @quiz_round.round_id %>"
     class="quiz_round <%= hide_as_class(hidden) %>">
<% if @quiz_round.vertex.present? %>
<div class="row justify-content-center px-2">
  <div class="col-sm-12 col-md-12 col-lg-10">
    <% if @quiz_round.vertex[:type] == 'Remark' %>
      <%= render partial: 'quizzes/remark' %>
    <% else %>
      <%= render partial: 'quizzes/question' %>
    <% end %>
  </div>
</div>
<% else %>
  <%= render partial: 'quizzes/error' %>
<% end %>
</div>
