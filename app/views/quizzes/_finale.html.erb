<div id="finale" class="no_display">
  <div class="row justify-content-center px-2">
    <div class="col-sm-12 col-md-12 col-lg-10">
      <div class="card bg-remark border-secondary mt-2">
        <div class="card-body">
          <%= t('admin.quiz.finale_html',
                xkcd_link: link_to(t('admin.quiz.xkcd'),
                                   'https://xkcd.com',
                                   target: :_blank)) %>
          <div>
            <% xkcd_comic = URI.extract(xkcd, ['https'])&.first %>
            <%= link_to image_tag(xkcd_comic,
                                  class: "img-fluid"),
                        xkcd_comic,
                        target: :_blank,
                        title: xkcd.remove(xkcd_comic).chomp(': ') %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
