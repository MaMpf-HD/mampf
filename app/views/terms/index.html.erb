<div class="row mt-3 p-2">
  <div class="col-12">
    <h4>
      <%= t('admin.term.index') %>
    </h4>
  </div>
</div>
<div class="row p-2">
  <div class="col-12 d-flex justify-content-between align-items-center">
    <%= form_with url: set_active_term_path,
                  method: 'post',
                  html: { class: 'd-flex align-items-center gap-2' } do |f|%>
      <%= f.label :active_term,
                  t('admin.term.active_term'),
                  class: 'mb-0' %>
      <%= f.select :active_term,
                   options_for_select(Term.select_terms, Term.active&.id),
                   {},
                   { class: 'form-select form-select-sm', style: 'width: auto;' }  %>
      <%= f.submit t('buttons.save'),
                   class: 'btn btn-sm btn-primary',
                   data: { confirm: t('confirmation.generic') } %>
    <% end %>
    <%= link_to t('buttons.create_term'),
                new_term_path,
                class: 'btn btn-sm btn-secondary',
                id: 'create-new-term',
                data: { turbo_frame: dom_id(Term.new) } %>
  </div>
</div>
<div class="row mt-1 p-2">
  <div class="col-8">
  </div>
  <div class="col-4 text-end">
    <%== pagy_series_nav(@pagy) %>
  </div>
</div>
<div class="row bg-mdb-color-lighten-5 mx-2 px-4 py-3">
  <div class="col-2">
    <strong>
      <%= t('basics.year') %>
    </strong>
  </div>
  <div class="col-2">
    <strong>
      <%= t('basics.type') %>
    </strong>
  </div>
  <div class="col-4">
    <strong>
      <%= t('basics.lectures') %>
    </strong>
  </div>
  <div class="col-4">
    <strong>
      <%= t('basics.actions') %>
    </strong>
  </div>
</div>
<%= turbo_frame_tag Term.new %>
<%= turbo_frame_tag "terms" do %>
    <%= render @terms %>
<% end %>
