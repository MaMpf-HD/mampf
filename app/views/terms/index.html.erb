  <div class="col-10">
    <h4>
      Semester√ºbersicht
    </h4>
  </div>
  <div class="col-2">
    <%= link_to 'Semester anlegen', new_term_path,
                class: 'btn btn-secondary',
                id: 'create-new-term',
                remote: true %>
  </div>
</div>
<div class="row mt-1 p-2">
  <div class="col-8">
  </div>
  <div class="col-4 text-right">
    <%= paginate @terms %>
  </div>
</div>
<div class="row bg-light px-4 py-3">
  <div class="col-2">
    <strong>
      Jahr
    </strong>
  </div>
  <div class="col-2">
    <strong>
      Typ
    </strong>
  </div>
  <div class="col-4">
    <strong>
      Vorlesungen
    </strong>
  </div>
  <div class="col-4">
    <strong>
      Aktionen
    </strong>
  </div>
</div>
<div id="row-new-term" class="border-bottom" style="display: none;" >
</div>
<% @terms.each do |t| %>
  <div class="row border-bottom px-4" id="row-term-<%= t.id %>">
    <%= render partial: 'terms/row', locals: { term: t }%>
  </div>
<% end %>
