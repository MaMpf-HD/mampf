<div class="row">
  <div class="col-12">
    <h2>
      <span class="badge badge-secondary mr-3">
        Begriff<%= ' #' + @tag.id.to_s %>
      </span>
      <%= @tag.title %></h2>
      <%= link_to 'Map',
                  display_cyto_tag_path(@tag),
                  target: :_blank%>
  </div>
</div>
<% unless @related_tags.empty? && @tags_in_neighbourhood.empty? &&
          @lectures.empty? %>
  <div class="row">
    <% unless @related_tags.empty? %>
      <div class="col-12 col-md-6 col-lg-5 pt-3">
        <%= render partial: 'tags',
                   locals: { related_tags: @related_tags,
                             tags_description: 'Verknüpfte Begriffe'} %>
      </div>
    <% end %>
    <% unless @tags_in_neighbourhood.empty? %>
      <div class="col-12 col-md-6 col-lg-4 pt-3">
        <%= render partial: 'tags',
                   locals: { related_tags: @tags_in_neighbourhood,
                             tags_description: 'Begriffe im weiteren Umfeld'} %>
      </div>
    <% end %>
    <% unless @lectures.empty? %>
      <div class="col-12 col-md-12 col-lg-3 pt-3">
        <%= render partial: 'lectures/lectures',
                   locals: { lectures: @lectures,
                             type: 'lecture_info'} %>
      </div>
    <% end %>
  </div>
<% end %>
<div class="row mt-2">
  <div class="col-12">
    <div class="card">
      <div class="card-header bg-green-darken-3">
        <div class="row">
          <div class="col-6">
            <h5 class="text-light">
              MaMpf-Map
            </h5>
          </div>
          <div class="col-6 text-right">
            <%= link_to 'in externem Tab rendern',
                        display_cyto_tag_path(@tag),
                        class: 'btn btn-outline-light',
                        target: :_blank%>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div id="cy" data-elements="<%= @graph_elements.to_json %>">
        </div>
      </div>
    </div>
  </div>
</div>
<% unless @media.empty? %>
  <div class="row">
    <div class="col-12 pt-5">
      <h5>
        Verknüpfte Medien
      </h5>
    </div>
  </div>
  <%= render partial: 'media/media', locals: { media: @media} %>
<% end %>
