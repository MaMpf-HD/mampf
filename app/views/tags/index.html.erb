<div class="row mt-3 p-2">
  <div class="col-10">
    <h4>
      Tagübersicht
    </h4>
  </div>
  <div class="col-2">
    <%= link_to 'Tag anlegen', new_tag_path,
                class: 'btn btn-secondary',
                id: 'create-new-tag',
                remote: true %>
  </div>
</div>
<form>
  <div class="form-row mb-3 p-2">
    <div class="form-group col-4 mx-3">
      <label for="inputTag">
        Titel
      </label>
      <input type="text" id="inputTag" class="form-control"
             placeholder="suchen">
    </div>
    <div class="form-group col-6">
      <label for="inputCourses">
        Kurse
      </label>
      <select multiple id="inputCourses" class="selectize" placeholder="eingeben">
        <%= Course.all.each do |c| %>
        <option <%= current_user.edited_courses.include?(c) ? 'selected' : '' %>
                value="<%= c.id %>">
          <%= c.short_title %>
        </option>
        <% end %>
      </select>
    </div>
  </div>
</form>
<div class="row bg-light px-4 py-3">
  <div class="col-3">
    <strong>
      Titel
    </strong>
  </div>
  <div class="col-2">
    <strong>
      Module
    </strong>
  </div>
  <div class="col-4">
    <strong>
      verknüpfte Tags
    </strong>
  </div>
  <div class="col-3">
    <strong>
      Aktionen
    </strong>
  </div>
</div>
<div id="tagTable" data-tags="<%= @tags_with_id %>">
  <% cache(@tags) do %>
    <% @tags.each do |t| %>
      <div class="row border-bottom px-4" id="row-tag-<%= t.id %>"
           style="display: <%= show_no_block((t.course_ids & current_user.edited_course_ids).present?) %>"
           data-courses="<%= t.courses.each.map(&:id).to_json %>">
        <%= render partial: 'tags/row', locals: { tag: t }%>
      </div>
    <% end %>
  <% end %>
</div>
