<div class="card bg-info">
  <div class="card-header bg-primary"><h5><%= tags_description %></h5></div>
  <div class="card-body">
  <div class="row">
  <% split_list(many_related_tags).each do |tag_list| %>
  <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
  <ul>
    <% tag_list.each do |t| %>
    <% unless t.nil? %>
      <li class="text-light"><%= link_to t.title, tag_path(t), class: "text-light" %></li>
    <% end %>
    <% end %>
  </ul>
  </div>
  <% end %>
</div>
</div>
</div>
