<div class="row mt-3 p-2">
  <div class="col-10">
    <h4>
      <%= t('admin.tag.index') %>
    </h4>
  </div>
  <div class="col-2">
    <%= link_to t('admin.tag.create'),
                new_tag_path,
                class: 'btn btn-sm btn-secondary',
                id: 'create-new-tag' %>
  </div>
</div>

<%= render(SearchForm::SearchForm.new(url: tags_search_path, context: "tags")) do |c| %>
  <% c.add_field(SearchForm::Filters::TagTitleFilter.new) %>

  <% c.add_field(SearchForm::Filters::CourseFilter.new.with_edited_courses_button(current_user)) %>

  <% c.add_field(SearchForm::Filters::PerPageFilter.new(id: "tags_per")) %>
<% end %>

<div id="tag-search-results">
</div>