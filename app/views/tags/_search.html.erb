<%= render(SearchForm::FormComponent.new(
  url: tags_search_path,
  context: 'tags'
)) do |c| %>
  <% c.with_header(
       title: t('admin.tag.index'),
       button_text: t('admin.tag.create'),
       button_path: new_tag_path
     ) %>

  <% c.with_field(SearchForm::Filters::TagTitleFilterComponent.new) %>

  <% c.with_field(SearchForm::Filters::CourseFilterComponent.new) do |filter| %>
    <%= filter.render_edited_courses_button(current_user) %>
  <% end %>

  <% c.with_field(SearchForm::Filters::PerPageFilterComponent.new(id: 'tags_per')) %>

  <% c.with_footer(results_container_id: "tag-search-results") %>
<% end %>