<div class="row mt-3 p-2">
  <div class="col-10">
    <h4>
      <%= t('admin.tag.index') %>
    </h4>
  </div>
  <div class="col-2">
    <%= link_to t('admin.tag.create'),
                new_tag_path,
                class: 'btn btn-sm btn-secondary',
                id: 'create-new-tag' %>
  </div>
</div>

<%= render_search_form(url: tags_search_path, context: "tags") do |f|
  f.tag_title_filter
  f.course_filter.with_edited_courses_button(current_user)
  f.per_page_filter(id: "tags_per")
end %>

<div id="tag-search-results">
</div>