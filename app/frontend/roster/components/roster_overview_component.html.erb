<div class="mb-4">
  <div class="row g-3 mb-4">
    <!-- Stats Cards -->
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted"><%= t('roster.stats.total_participants', default: 'Total Participants') %></h6>
          <h2 class="card-title mb-0"><%= total_participants %></h2>
          <small class="text-muted">
            <%= t('roster.stats.capacity_usage', count: total_capacity, default: "of %{count} spots filled") %>
          </small>
        </div>
      </div>
    </div>

    <!-- Global Actions -->
    <div class="col-md-8">
      <div class="card h-100">
        <div class="card-body d-flex align-items-center justify-content-between">
          <div>
            <h5 class="card-title"><%= t('roster.dashboard.title', default: 'Dashboard') %></h5>
            <p class="card-text text-muted small mb-0">
              <%= t('roster.dashboard.description', default: 'Manage allocations and view global performance.') %>
            </p>
          </div>
          <div class="d-flex gap-2">
             <button class="btn btn-outline-secondary" disabled>
               <i class="bi bi-download me-1"></i> <%= t('roster.actions.export_all', default: 'Export All') %>
             </button>
             <button class="btn btn-primary" disabled>
               <i class="bi bi-people me-1"></i> <%= t('roster.actions.global_roster', default: 'Global Roster') %>
             </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12 col-lg-8">
    <% groups.each do |group| %>
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0"><%= group[:title] %></h5>
        </div>
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead>
              <tr>
                <th><%= t('roster.columns.title') %></th>
                <% if group[:type] == :tutorials %>
                  <th><%= t('roster.columns.tutors') %></th>
                <% elsif group[:type] == :talks %>
                  <th><%= t('roster.columns.speakers', default: 'Speakers') %></th>
                <% end %>
                <th><%= t('roster.columns.capacity') %></th>
                <th><%= t('roster.columns.occupancy') %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% group[:items].each do |item| %>
                <tr>
                  <td><%= item.title %></td>
                  <% if group[:type] == :tutorials %>
                    <td>
                      <%= item.tutors.map(&:name).join(", ") %>
                    </td>
                  <% elsif group[:type] == :talks %>
                    <td>
                      <%= item.speakers.map(&:name).join(", ") %>
                    </td>
                  <% end %>
                  <td><%= item.capacity %></td>
                  <td>
                    <%# Simple text for now, visual bar can be added later %>
                    <%= item.roster_entries.count %> / <%= item.capacity %>
                  </td>
                  <td class="text-end">
                    <%= link_to t('roster.manage'),
                                group_path(item),
                                class: "btn btn-sm btn-outline-primary",
                                data: { turbo_frame: "_top" } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <% if group[:items].sum { |i| i.roster_entries.count }.zero? %>
          <div class="card-footer text-muted small">
            <i class="bi bi-info-circle me-1"></i>
            <%= t('roster.empty_hint', default: 'No participants yet. Please finalize a registration campaign to populate the roster.') %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="col-12 col-lg-4">
    <%= render RosterCandidatesComponent.new(lecture: @lecture, group_type: @group_type) %>
  </div>
</div>
