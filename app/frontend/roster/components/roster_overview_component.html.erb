<div class="mb-3">
  <!-- Tabs -->
  <ul class="nav nav-tabs mb-3" id="rosterTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="groups-tab" data-bs-toggle="tab" data-bs-target="#groups-pane" type="button" role="tab">
        <%= t('roster.tabs.groups') %>
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="candidates-tab" data-bs-toggle="tab" data-bs-target="#candidates-pane" type="button" role="tab">
        <%= t('roster.tabs.candidates') %>
        <% if unassigned_count.positive? %>
          <span class="badge rounded-pill bg-danger ms-1"><%= unassigned_count %></span>
        <% else %>
          <span class="badge rounded-pill bg-secondary ms-1">0</span>
        <% end %>
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link disabled" id="grades-tab" type="button" role="tab" title="Coming soon">
        <%= t('roster.tabs.grades') %>
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="global-tab" data-bs-toggle="tab" data-bs-target="#global-pane" type="button" role="tab">
        <%= t('roster.tabs.global', default: 'Global Roster') %>
      </button>
    </li>
    <li class="nav-item ms-auto align-self-center text-muted small">
      <%= t('roster.stats.total_participants') %>: <strong><%= total_participants %></strong>
    </li>
  </ul>

  <!-- Tab Content -->
  <div class="tab-content" id="rosterTabsContent">
    <!-- Groups Tab -->
    <div class="tab-pane fade show active" id="groups-pane" role="tabpanel">
      <div class="card border-top-0">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th><%= t('roster.columns.title') %></th>
                <% if @group_type == :tutorials %>
                  <th><%= t('roster.columns.tutors') %></th>
                <% elsif @group_type == :talks %>
                  <th><%= t('roster.columns.speakers') %></th>
                <% end %>
                <th><%= t('roster.columns.capacity') %></th>
                <th><%= t('roster.columns.occupancy') %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% groups.each do |group| %>
                <% group[:items].each do |item| %>
                  <tr>
                    <td class="fw-medium"><%= item.title %></td>
                    <% if @group_type == :tutorials %>
                      <td><%= item.tutors.map(&:name).join(", ") %></td>
                    <% elsif @group_type == :talks %>
                      <td><%= item.speakers.map(&:name).join(", ") %></td>
                    <% end %>
                    <td><%= item.capacity %></td>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="progress flex-grow-1 me-2" style="height: 6px;">
                          <% percentage = item.capacity ? (item.roster_entries.count.to_f / item.capacity * 100).clamp(0, 100) : 0 %>
                          <div class="progress-bar <%= percentage >= 100 ? 'bg-danger' : 'bg-primary' %>"
                               role="progressbar"
                               style="width: <%= percentage %>%"></div>
                        </div>
                        <span class="small text-muted"><%= item.roster_entries.count %></span>
                      </div>
                    </td>
                    <td class="text-end">
                      <%= link_to t('roster.manage'),
                                  group_path(item),
                                  class: "btn btn-sm btn-outline-primary" %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
        <% if total_participants.zero? %>
          <div class="card-footer text-muted small text-center py-3">
            <i class="bi bi-info-circle me-1"></i> <%= t('roster.empty_hint') %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Candidates Tab -->
    <div class="tab-pane fade" id="candidates-pane" role="tabpanel">
      <%= render RosterCandidatesComponent.new(lecture: @lecture, group_type: @group_type) %>
    </div>

    <!-- Global Roster Tab -->
    <div class="tab-pane fade" id="global-pane" role="tabpanel">
      <div class="card border-top-0">
        <div class="card-body text-center text-muted py-5">
          <i class="bi bi-bar-chart-line fs-1 d-block mb-2"></i>
          <p>Global statistics and participant list coming soon.</p>
        </div>
      </div>
    </div>
  </div>
</div>
