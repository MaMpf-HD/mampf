<div class="collapse mb-3" id="roster-lifecycle-collapse">
  <div class="card bg-light border-0">
    <div class="card-body">
      <h5 class="card-title fw-bold text-dark mb-3">
        <i class="bi bi-recycle me-2"></i>
        <%= t('roster.lifecycle_help.title') %>
      </h5>
      <p class="text-muted mb-4"><%= t('roster.lifecycle_help.intro') %></p>

      <div class="row g-4 position-relative">
        <!-- Connecting Line -->
        <div class="d-none d-lg-block position-absolute top-50 start-0 translate-middle-y w-100" style="z-index: 0;">
          <div class="border-top border-2 border-secondary opacity-25 w-100"></div>
        </div>

        <!-- Phase 1: Structure -->
        <div class="col-12 col-md-6 col-lg-3 position-relative" style="z-index: 1;">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-3">
              <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 48px; height: 48px;">
                <i class="bi bi-plus-square fs-5"></i>
              </div>
              <h6 class="fw-bold"><%= t('roster.lifecycle_help.phase1.title') %></h6>
              <p class="small text-muted mb-0">
                <%= t('roster.lifecycle_help.phase1.description_html',
                      link: link_to(t('roster.lifecycle_help.phase1.link_text'),
                                    "#roster-group-types-collapse",
                                    data: { bs_toggle: "collapse" },
                                    class: "fw-bold text-decoration-underline")) %>
              </p>
            </div>
          </div>
        </div>

        <!-- Phase 2: Enrollment -->
        <div class="col-12 col-md-6 col-lg-3 position-relative" style="z-index: 1;">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-3">
              <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 48px; height: 48px;">
                <i class="bi bi-people fs-5"></i>
              </div>
              <h6 class="fw-bold"><%= t('roster.lifecycle_help.phase2.title') %></h6>
              <p class="small text-muted mb-1">
                <%= t('roster.lifecycle_help.phase2.description', link: "") %>
              </p>
              <a href="#roster-workflow-collapse" data-bs-toggle="collapse" class="small fw-bold text-decoration-underline stretched-link">
                <%= t('roster.lifecycle_help.phase2.link_text') %>
              </a>
            </div>
          </div>
        </div>

        <!-- Phase 3: Management -->
        <div class="col-12 col-md-6 col-lg-3 position-relative" style="z-index: 1;">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-3">
              <div class="rounded-circle bg-secondary text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 48px; height: 48px;">
                <i class="bi bi-lock fs-5"></i>
              </div>
              <h6 class="fw-bold"><%= t('roster.lifecycle_help.phase3.title') %></h6>
              <p class="small text-muted mb-0">
                <%= t('roster.lifecycle_help.phase3.description') %>
              </p>
            </div>
          </div>
        </div>

        <!-- Phase 4: Exceptions -->
        <div class="col-12 col-md-6 col-lg-3 position-relative" style="z-index: 1;">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center p-3">
              <div class="rounded-circle bg-success text-white d-inline-flex align-items-center justify-content-center mb-3" style="width: 48px; height: 48px;">
                <i class="bi bi-sliders fs-5"></i>
              </div>
              <h6 class="fw-bold"><%= t('roster.lifecycle_help.phase4.title') %></h6>
              <p class="small text-muted mb-0">
                <%= t('roster.lifecycle_help.phase4.description') %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
