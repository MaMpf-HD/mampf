<div class="collapse mb-3" id="roster-group-types-collapse">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title mb-3"><%= t('roster.roster_help.group_types.title') %></h5>
      <p class="text-muted mb-3"><%= t('roster.roster_help.group_types.intro') %></p>

      <div class="row g-3">
        <% unless lecture.seminar? %>
          <div class="col-md-6">
            <div class="border rounded p-3 h-100">
              <h6 class="fw-bold mb-2">
                <i class="bi bi-person-lines-fill me-2"></i>
                <%= t("roster.roster_help.group_types.tutorials.title") %>
              </h6>
              <p class="mb-0 text-muted small">
                <%= t("roster.roster_help.group_types.tutorials.description") %>
              </p>
            </div>
          </div>
        <% else %>
          <div class="col-md-6">
            <div class="border rounded p-3 h-100">
              <h6 class="fw-bold mb-2">
                <i class="bi bi-mic-fill me-2"></i>
                <%= t("roster.roster_help.group_types.talks.title") %>
              </h6>
              <p class="mb-0 text-muted small">
                <%= t("roster.roster_help.group_types.talks.description") %>
              </p>
            </div>
          </div>
        <% end %>

        <div class="col-md-6">
          <div class="border rounded p-3 h-100">
            <h6 class="fw-bold mb-2">
              <i class="bi bi-collection me-2"></i>
              <%= t("roster.roster_help.group_types.flexible.title") %>
            </h6>
            <p class="mb-0 text-muted small">
              <%= t("roster.roster_help.group_types.flexible.description") %>
            </p>
          </div>
        </div>
      </div>

      <div class="alert alert-info mt-3 mb-0" role="alert">
        <div>
          <strong><i class="bi bi-diagram-3 me-2"></i><%= t('roster.roster_help.group_types.superset_principle.title') %></strong>
          <p class="mb-0 mt-2"><%= t('roster.roster_help.group_types.superset_principle.description') %></p>
        </div>
        <div class="mt-3">
          <strong><i class="bi bi-pin-angle me-2"></i><%= t('roster.roster_help.group_types.sticky_enrollment.title') %></strong>
          <p class="mb-0 mt-2"><%= t('roster.roster_help.group_types.sticky_enrollment.description') %></p>
        </div>
      </div>
    </div>
  </div>
</div>
