<div class="card border-top-0">
  <div class="card-body bg-light border-bottom">
    <details <%= "open" if total_participants.zero? %>>
      <summary class="text-muted" style="cursor: pointer;">
        <i class="bi bi-info-circle me-1"></i> <%= t('roster.workflow.title') %>
      </summary>
      <div class="mt-3 text-muted">
        <p class="mb-1 fw-bold"><%= t('roster.workflow.standard_method') %>:</p>
        <ol class="ps-3 mb-2">
          <li>
            <%= t('roster.workflow.step_1_html',
                  link: link_to(t('registration.campaign.index.title', default: 'Anmeldeverfahren'),
                                edit_lecture_path(component.lecture, tab: "campaigns"),
                                data: { turbo_frame: "_top" })) %>
          </li>
          <li><%= t('roster.workflow.step_2') %></li>
          <li><%= t('roster.workflow.step_3') %></li>
          <li><%= t('roster.workflow.step_4') %></li>
        </ol>
        <p class="mb-1 fw-bold"><%= t('roster.workflow.manual_method') %>:</p>
        <p class="mb-0"><%= t('roster.workflow.manual_desc') %></p>
      </div>
    </details>
  </div>
  <div class="table-responsive">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th><%= t('roster.columns.title') %></th>
          <% if group_type == :tutorials %>
            <th><%= t('roster.columns.tutors') %></th>
          <% elsif group_type == :talks %>
            <th><%= t('roster.columns.speakers') %></th>
          <% end %>
          <th><%= t('roster.columns.capacity') %></th>
          <th><%= t('roster.columns.occupancy') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% groups.each do |group| %>
          <% group[:items].each do |item| %>
            <% campaign = component.active_campaign_for(item) %>
            <tr>
              <td class="fw-medium"><%= item.title %></td>
              <% if group_type == :tutorials %>
                <td><%= item.tutors.map(&:name).join(", ") %></td>
              <% elsif group_type == :talks %>
                <td><%= item.speakers.map(&:name).join(", ") %></td>
              <% end %>
              <td><%= item.capacity || "âˆž" %></td>
              <td>
                <% if component.show_campaign_running_badge?(item, campaign) %>
                  <span class="badge bg-info text-dark">
                    <%= t('roster.campaign_running') %>
                  </span>
                <% else %>
                  <div class="d-flex align-items-center">
                    <div class="flex-grow-1 me-2">
                      <% if item.capacity %>
                        <%= progress_bar(
                              item.roster_entries.count,
                              item.capacity,
                              classification: :utilization,
                              height: "6px",
                              show_label: false,
                              container_class: "progress"
                            ) %>
                      <% end %>
                    </div>
                    <span class="small text-muted"><%= item.roster_entries.count %></span>
                  </div>
                <% end %>
              </td>
              <td class="text-end">
                <div class="d-flex gap-2 justify-content-end align-items-center">
                  <% if !item.locked? %>
                    <%= link_to t('roster.manage'),
                                component.group_path(item),
                                class: "btn btn-sm btn-outline-primary" %>
                  <% elsif campaign %>
                    <%= link_to t('roster.view_campaign'),
                                edit_lecture_path(component.lecture, tab: "campaigns", campaign_id: campaign.id),
                                class: "btn btn-sm btn-outline-secondary",
                                data: { turbo_frame: "_top" } %>
                  <% elsif !item.in_real_campaign? %>
                    <%= link_to t('roster.create_campaign'),
                                edit_lecture_path(component.lecture, tab: "campaigns", new_campaign: true),
                                class: "btn btn-sm btn-outline-secondary",
                                data: { turbo_frame: "_top" } %>
                  <% end %>

                  <% if item.manual_roster_mode? %>
                    <% if item.can_disable_manual_mode? %>
                      <%= form_with model: item, scope: :rosterable, url: component.group_path(item), method: :patch,
                            data: { turbo: true }, class: "d-inline-block" do |f| %>
                        <div class="form-check form-switch">
                          <%= f.check_box :manual_roster_mode,
                                class: "form-check-input",
                                role: "switch",
                                checked: true,
                                onchange: "this.form.requestSubmit()" %>
                          <label class="form-check-label small text-muted"><%= t('roster.manual_mode') %></label>
                        </div>
                      <% end %>
                    <% end %>
                  <% elsif item.can_enable_manual_mode? %>
                    <%= form_with model: item, scope: :rosterable, url: component.group_path(item), method: :patch,
                          data: { turbo: true }, class: "d-inline-block" do |f| %>
                      <div class="form-check form-switch">
                        <%= f.check_box :manual_roster_mode,
                              class: "form-check-input",
                              role: "switch",
                              checked: false,
                              onchange: "this.form.requestSubmit()" %>
                        <label class="form-check-label small text-muted"><%= t('roster.manual_mode') %></label>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
