<div class="card border-top-0">
  <div class="card-body bg-light border-bottom">
    <details <%= "open" if total_participants.zero? %>>
      <summary class="text-muted" style="cursor: pointer;">
        <i class="bi bi-info-circle me-1"></i> <%= t('roster.workflow.title') %>
      </summary>
      <div class="mt-3 text-muted">
        <p class="mb-1 fw-bold"><%= t('roster.workflow.standard_method') %>:</p>
        <ol class="ps-3 mb-2">
          <li>
            <%= t('roster.workflow.step_1_html',
                  link: link_to(t('registration.campaign.index.title'),
                                edit_lecture_path(component.lecture, tab: "campaigns"),
                                data: { turbo_frame: "_top" })) %>
          </li>
          <li><%= t('roster.workflow.step_2') %></li>
          <li><%= t('roster.workflow.step_3') %></li>
          <li><%= t('roster.workflow.step_4') %></li>
        </ol>
        <div class="d-flex align-items-center mb-1">
          <span class="fw-bold"><%= t('roster.workflow.manual_method') %>:</span>
          <span class="d-inline-flex align-items-center border border-secondary rounded-pill px-2 py-1 ms-2 bg-white">
            <i class="bi bi-pencil me-2 text-muted"></i>
            <div class="form-check form-switch mb-0">
              <input class="form-check-input" type="checkbox" checked disabled>
            </div>
          </span>
        </div>
        <p class="mb-0"><%= t('roster.workflow.manual_desc') %></p>
      </div>
    </details>
  </div>
  <% groups.each_with_index do |group, index| %>
    <div class="card-header bg-secondary text-white mt-3">
      <h6 class="mb-0 fw-bold"><%= t("registration.item.groups.#{group[:type]}") %></h6>
    </div>
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th><%= t('roster.columns.title') %></th>
            <% if group[:type] == :tutorials %>
              <th><%= t('roster.columns.tutors') %></th>
            <% elsif group[:type] == :talks %>
              <th><%= t('roster.columns.speakers') %></th>
            <% end %>
            <th><%= t('roster.columns.capacity') %></th>
            <th><%= t('roster.columns.occupancy') %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% group[:items].each do |item| %>
            <% campaign = component.active_campaign_for(item) %>
            <tr>
              <td class="fw-medium"><%= item.title %></td>
              <% if group[:type] == :tutorials %>
                <td><%= item.respond_to?(:tutors) ? item.tutors.map(&:name).join(", ") : "" %></td>
              <% elsif group[:type] == :talks %>
                <td><%= item.respond_to?(:speakers) ? item.speakers.map(&:name).join(", ") : "" %></td>
              <% end %>
              <td><%= item.capacity || "âˆž" %></td>
              <td>
                <% if component.show_campaign_running_badge?(item, campaign) %>
                  <span class="badge bg-info text-dark">
                    <%= t('roster.campaign_running') %>
                  </span>
                <% else %>
                  <div class="d-flex align-items-center">
                    <div class="flex-grow-1 me-2">
                      <% if item.capacity %>
                        <%= progress_bar(
                              item.roster_entries.count,
                              item.capacity,
                              classification: :utilization,
                              height: "6px",
                              show_label: false,
                              container_class: "progress"
                            ) %>
                      <% end %>
                    </div>
                    <span class="small text-muted"><%= item.roster_entries.count %></span>
                  </div>
                <% end %>
              </td>
              <td class="text-end">
                <div class="d-flex gap-2 justify-content-end align-items-center">
                  <% if !item.locked? %>
                    <%= link_to component.group_path(item),
                                class: "btn btn-sm btn-outline-primary",
                                title: t('roster.manage'),
                                data: { bs_toggle: "tooltip" } do %>
                      <i class="bi bi-person-lines-fill"></i>
                    <% end %>
                  <% elsif campaign %>
                    <%= link_to edit_lecture_path(component.lecture, tab: "campaigns", campaign_id: campaign.id),
                                class: "btn btn-sm btn-outline-secondary",
                                title: t('roster.view_campaign'),
                                data: { turbo_frame: "_top", bs_toggle: "tooltip" } do %>
                      <i class="bi bi-calendar-check"></i>
                    <% end %>
                  <% elsif !item.in_real_campaign? %>
                    <%= link_to edit_lecture_path(component.lecture, tab: "campaigns", new_campaign: true),
                                class: "btn btn-sm btn-outline-secondary",
                                title: t('roster.create_campaign'),
                                data: { turbo_frame: "_top", bs_toggle: "tooltip" } do %>
                      <i class="bi bi-calendar-plus"></i>
                    <% end %>
                  <% end %>

                  <% if item.manual_roster_mode? %>
                    <% if item.can_disable_manual_mode? %>
                      <%= form_with model: item, scope: :rosterable,
                            url: send("#{item.class.name.underscore}_roster_path", item),
                            method: :patch,
                            data: { turbo: true, controller: "auto-submit-form" }, class: "d-flex align-items-center border border-secondary rounded-pill px-2 py-1" do |f| %>
                        <%= hidden_group_type_field(group_type) %>
                        <i class="bi bi-pencil me-2 text-muted" title="<%= t('roster.manual_mode') %>" data-bs-toggle="tooltip"></i>
                        <div class="form-check form-switch mb-0">
                          <%= f.check_box :manual_roster_mode,
                                class: "form-check-input",
                                role: "switch",
                                id: dom_id(item, :manual_roster_mode),
                                checked: true,
                                aria: { label: t('roster.manual_mode') },
                                data: { action: "change->auto-submit-form#submit" } %>
                        </div>
                      <% end %>
                    <% end %>
                  <% elsif item.can_enable_manual_mode? %>
                    <%= form_with model: item, scope: :rosterable,
                          url: send("#{item.class.name.underscore}_roster_path", item),
                          method: :patch,
                          data: { turbo: true, controller: "auto-submit-form" }, class: "d-flex align-items-center border border-secondary rounded-pill px-2 py-1" do |f| %>
                      <%= hidden_group_type_field(group_type) %>
                      <i class="bi bi-pencil me-2 text-muted" title="<%= t('roster.manual_mode') %>" data-bs-toggle="tooltip"></i>
                      <div class="form-check form-switch mb-0">
                        <%= f.check_box :manual_roster_mode,
                              class: "form-check-input",
                              role: "switch",
                              id: dom_id(item, :manual_roster_mode),
                              checked: false,
                              aria: { label: t('roster.manual_mode') },
                              data: { action: "change->auto-submit-form#submit" } %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
