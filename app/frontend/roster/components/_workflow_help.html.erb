<div class="collapse mb-3" id="roster-workflow-collapse">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title mb-3"><%= t('roster.roster_help.title') %></h5>
      <p class="text-muted mb-4"><%= t('roster.roster_help.intro') %></p>

      <!-- Phase 1: Choose Setup Method -->
      <div class="mb-4">
        <div class="row g-3">
          <div class="col-md-6">
            <div class="border border-primary rounded p-3 h-100">
              <h6 class="fw-bold mb-2">
                <i class="bi bi-calendar-check me-2 text-primary"></i>
                <%= t('roster.roster_help.phase1.campaigns.title') %>
              </h6>
              <p class="small text-muted mb-2"><%= t('roster.roster_help.phase1.campaigns.description') %></p>
              <ul class="mb-0 small">
                <% t('roster.roster_help.phase1.campaigns.benefits').each do |benefit| %>
                  <li><%= benefit %></li>
                <% end %>
              </ul>
            </div>
          </div>

          <div class="col-md-6">
            <div class="border border-success rounded p-3 h-100">
              <h6 class="fw-bold mb-2">
                <i class="bi bi-x-circle me-2 text-success"></i>
                <%= t('roster.roster_help.phase1.skip_campaigns.title') %>
              </h6>
              <p class="small text-muted mb-2"><%= t('roster.roster_help.phase1.skip_campaigns.description') %></p>
              <ul class="mb-0 small">
                <% t('roster.roster_help.phase1.skip_campaigns.benefits').each do |benefit| %>
                  <li><%= benefit %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div class="alert alert-light border d-flex align-items-center mb-0 fade show" role="alert">
        <i class="bi bi-info-circle text-primary fs-4 me-3"></i>
        <div>
           <%= t('roster.roster_help.mode_hint') %>
        </div>
      </div>
    </div>
  </div>
</div>
