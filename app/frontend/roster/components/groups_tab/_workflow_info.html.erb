<div class="card section-card mb-4">
  <div class="card-body">
    <details>
      <summary class="text-muted fw-bold" style="cursor: pointer;">
        <i class="bi bi-info-circle me-1"></i> <%= t('roster.workflow.title') %>
      </summary>
      <div class="mt-3 text-muted">
        <p class="mb-1 fw-bold"><%= t('roster.workflow.standard_method') %>:</p>
        <ol class="ps-3 mb-2">
          <li>
            <%= t('roster.workflow.step_1_html',
                  link: link_to(t('registration.campaign.index.title'),
                                edit_lecture_path(component.lecture, tab: "campaigns"),
                                data: { turbo_frame: "_top" })) %>
          </li>
          <li><%= t('roster.workflow.step_2') %></li>
          <li><%= t('roster.workflow.step_3') %></li>
          <li><%= t('roster.workflow.step_4') %></li>
        </ol>
        <div class="d-flex align-items-center mb-1">
          <span class="fw-bold"><%= t('roster.workflow.manual_method') %>:</span>
          <span class="d-inline-flex align-items-center border border-secondary rounded-pill px-2 py-1 ms-2 bg-white">
            <i class="bi bi-pencil me-2 text-muted"></i>
            <div class="form-check form-switch mb-0">
              <input class="form-check-input" type="checkbox" checked disabled>
            </div>
          </span>
        </div>
        <p class="mb-0"><%= t('roster.workflow.manual_desc') %></p>
      </div>
    </details>
  </div>
</div>
