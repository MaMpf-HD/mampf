<% component.subtables_for(group).each do |subtable| %>
  <div class="card mb-4 border-0 shadow-sm" style="background-color: #fff;">
    <% if subtable[:title] %>
      <div class="section-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0 fw-bold text-dark">
          <%= subtable[:title] %>
          <%= helpdesk(subtable[:help], false) if subtable[:help] %>
        </h5>
      </div>
    <% end %>

    <div class="card-body p-4">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-3">
        <% subtable[:items].each do |item| %>
          <%= render "roster/components/groups_tab/item_tile",
                     item: item,
                     group: group,
                     component: component,
                     group_type: group_type %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
