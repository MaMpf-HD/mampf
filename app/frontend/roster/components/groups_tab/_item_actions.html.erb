<div id="<%= dom_id(item, :actions) %>" class="d-flex gap-2 justify-content-end align-items-center">
  <%= roster_manage_button(item, component, campaign) %>
  <%= roster_edit_button(item, group_type) %>
  <%= roster_destroy_button(item, group_type) %>

  <div class="dropdown">
    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="<%= t('roster.self_materialization.label') %>">
      <i class="bi bi-person-check"></i>
    </button>
    <ul class="dropdown-menu">
      <% item.class.self_materialization_modes.keys.each do |mode| %>
        <li>
          <%= link_to t("roster.self_materialization.modes.#{mode}"),
                component.update_self_materialization_path(item, mode),
                class: "dropdown-item #{'active' if item.self_materialization_mode == mode}",
                data: { turbo_method: :patch } %>
        </li>
      <% end %>
    </ul>
  </div>

  <% if component.show_manual_mode_switch?(item) %>
    <%= form_with model: item, scope: :rosterable,
          url: component.toggle_manual_mode_path(item),
          method: :patch,
          data: { turbo: true, controller: "auto-submit-form" },
          class: "d-flex align-items-center border border-secondary rounded-pill px-2 py-1" do |f| %>
      <%= hidden_group_type_field(group_type) %>
      <i class="bi bi-pencil me-2 text-muted" title="<%= t('roster.manual_mode') %>" data-bs-toggle="tooltip"></i>
      <div class="form-check form-switch mb-0">
        <%= f.check_box :manual_roster_mode,
              class: "form-check-input",
              role: "switch",
              id: dom_id(item, :manual_roster_mode),
              checked: item.manual_roster_mode?,
              aria: { label: t('roster.manual_mode') },
              data: { action: "change->auto-submit-form#submit" } %>
      </div>
    <% end %>
  <% end %>
</div>

