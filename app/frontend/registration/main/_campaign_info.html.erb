<div class="d-flex justify-content-between align-items-start mb-3">
  <div>
    <h1 class="h4 mb-1">
      <%= campaignable_host.title %> - <%= campaign.title %> 
      <span class="badge text-bg-primary"><%= campaign.status&.humanize %></span>
      <% if campaign.planning_only %>
        <span class="badge text-bg-primary"><%= t('registration.planning') %></span>
      <% end %>
    </h1>

    <div class="text-muted small">
      <%= campaignable_host.title_term_short %>
    </div>
  </div>

  <div class="text-end">
    <div class="text-muted small mb-1"><%= t('registration.campaign_main') %></div>
    <span class="badge text-bg-danger">
      <%= t('basics.closes') %>: <%= format_date(campaign.registration_deadline) %>
    </span>
  </div>
</div>
