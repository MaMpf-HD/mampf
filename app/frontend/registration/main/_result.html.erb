<div class="row g-3">

  <!--case student receive assignment -->
  <%if item_succeed%>
  <div class="col-12 col-lg-8">
    <div class="card">
      <div class="card-body">
        <div class="h5"><%= t("basics.assignment") %></div>
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-2">          
          <div>
            <div class="fs-6 fw-semibold">
              <%= item_succeed.title %> — <%= item_succeed.try(:time) || item_succeed.try(:title) %>
            </div>
            <div class="text-muted small">
              <% if item_succeed.try(:room).present? %>
                <%= t("basics.room") %>: <%= item_succeed.room %>
                <br>
              <% end %>

              <!--add tutor link -->
              <% if item_succeed.registerable.try(:tutors).present? %>
                <%= t("basics.tutor") %>: 
                <%= item_succeed.registerable.tutors.map { |e| link_to e.name, teacher_path(e) }.join(", ").html_safe %>
                <br>
              <% end %>

              <% if item_succeed.registerable.try(:position).present? %>
                <%= t("basics.position") %>: <%= item_succeed.registerable.position %>
              <% end %>
            </div>
          </div>
          <span class="badge rounded-pill text-bg-success mt-2 mt-md-0">
            <%= t("basics.confirmed") %>
          </span>
        </div>

        <div class="row g-2">
          <div class="col-6 col-md-3">
            <div class="small text-muted"><%= t("basics.capacity") %></div>
            <div class="fw-semibold">
              <%= item_succeed.capacity_used %> / <%= item_succeed.capacity %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-12 col-lg-4">
    <div class="card">
      <div class="card-body">
        <div class="h6"><%= t("registration.submitted_pref") %></div>
        <ol class="small mb-0">
          <% items_selected.each do |item| %>
            <li>
              <div style="display: flex; flex-direction: row; justify-content: space-between">
                <%= item.title %> — <%= item.try(:time) || item.try(:title) %>
                <%= item.capacity_used %> / <%= item.capacity %>
                <%= confirm_status_badge(status_items_selected[item]) %>
              </div>
            </li>
          <% end %>
        </ol>
      </div>
    </div>
  </div>

  <!--case all preferences are rejected -->
  <%else%>
  <div class="col-12 col-lg-8">
    <div class="card">
      <div class="card-body">
        <!-- noti banner if registered -->
        <div class="alert alert-danger py-1 px-2">
          <span>
          <%= t("registration.messages.cannot_secure_slot") %>
          </span>
        </div>
        <div class="h6"><%= t("registration.status_for_registration") %>s</div>
        <table class="table align-middle mb-2">
          <thead>
            <tr>
              <th scope="col"><%= t("basics.title") %></th>
              <th scope="col"><%= t("basics.time") %></th>
              <th scope="col"><%= t("basics.capacity") %></th>
              <th scope="col"><%= t("basics.status") %></th>
            </tr>
          </thead>
          <tbody>
            <% items_selected.each do |item| %>
              <tr>
                <td><%= item.title %></td>
                <td><%= item.try(:time) || item.try(:title) %></td>
                <td><%= item.capacity_used %> / <%= item.capacity %></td>
                <td><%= confirm_status_badge(status_items_selected[item]) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-12 col-lg-4">
    <div class="card">
      <div class="card-body">
        <%= t("registration.messages.course_admin_help") %>
      </div>
    </div>
  </div>
  <%end%>
</div>
