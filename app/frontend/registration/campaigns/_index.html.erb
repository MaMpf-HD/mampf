<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="lecture-pane-header mb-0">
    <%= t("registration.campaign.index.card_title") %>
    <%= helpdesk(t("registration.campaign.helpdesk.campaigns"), false) %>
  </h3>
  <%= link_to t("registration.campaign.index.new_campaign"),
              new_lecture_registration_campaign_path(lecture),
              class: "btn btn-sm btn-primary",
              role: "button",
              data: { turbo_stream: true } %>
</div>
<div id="campaigns_container">
  <% if local_assigns[:new_campaign] %>
    <%= render "registration/campaigns/card_body_form", campaign: new_campaign, lecture: lecture %>
  <% elsif local_assigns[:campaign] %>
    <%= render "registration/campaigns/card_body_show", campaign: campaign %>
  <% else %>
    <%= render "registration/campaigns/card_body_index", lecture: lecture %>
  <% end %>
</div>
