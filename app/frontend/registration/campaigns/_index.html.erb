<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="lecture-pane-header mb-0">
    <%= t("registration.campaign.index.card_title") %>
  </h3>
  <div class="d-flex gap-2">
    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#campaignInfo" aria-expanded="false" aria-controls="campaignInfo">
      <i class="bi bi-question-circle me-1"></i>
      <%= t("registration.campaign.about.toggle") %>
    </button>
    <%= link_to t("registration.campaign.index.new_campaign"),
                new_lecture_registration_campaign_path(lecture),
                class: "btn btn-sm btn-primary",
                role: "button",
                data: { turbo_stream: true } %>
  </div>
</div>
<div id="campaigns_container">
  <%= render "registration/campaigns/card_body_index", lecture: lecture %>
</div>
