<div class="card mb-3">
  <div class="card-header">
    <h5 class="mb-0"><%= t("registration.campaign.patterns.title") %></h5>
  </div>
  <div class="card-body">
    <p class="mb-3"><%= t("registration.campaign.patterns.intro") %></p>

    <div class="row g-3">
      <% if lecture.seminar? %>
        <div class="col-md-6">
          <div class="border rounded p-3 h-100">
            <h6 class="fw-bold mb-2">
              <i class="bi bi-mic-fill me-2"></i>
              <%= t("registration.campaign.patterns.talks.title") %>
            </h6>
            <p class="mb-0 text-muted small">
              <%= t("registration.campaign.patterns.talks.description") %>
            </p>
          </div>
        </div>
      <% else %>
        <div class="col-md-6">
          <div class="border rounded p-3 h-100">
            <h6 class="fw-bold mb-2">
              <i class="bi bi-person-lines-fill me-2"></i>
              <%= t("registration.campaign.patterns.tutorials.title") %>
            </h6>
            <p class="mb-0 text-muted small">
              <%= t("registration.campaign.patterns.tutorials.description") %>
            </p>
          </div>
        </div>
      <% end %>

      <div class="col-md-6">
        <div class="border rounded p-3 h-100">
          <h6 class="fw-bold mb-2">
            <i class="bi bi-box-arrow-in-right me-2"></i>
            <%= t("registration.campaign.patterns.enrollment.title") %>
          </h6>
          <p class="mb-0 text-muted small">
            <%= t("registration.campaign.patterns.enrollment.description") %>
          </p>
        </div>
      </div>

      <div class="col-md-6">
        <div class="border rounded p-3 h-100">
          <h6 class="fw-bold mb-2">
            <i class="bi bi-clipboard-data me-2"></i>
            <%= t("registration.campaign.patterns.planning.title") %>
          </h6>
          <p class="mb-0 text-muted small">
            <%= t("registration.campaign.patterns.planning.description") %>
          </p>
        </div>
      </div>

      <div class="col-md-6">
        <div class="border rounded p-3 h-100">
          <h6 class="fw-bold mb-2">
            <i class="bi bi-collection me-2"></i>
            <%= t("registration.campaign.patterns.other.title") %>
          </h6>
          <p class="mb-0 text-muted small">
            <%= t("registration.campaign.patterns.other.description") %>
          </p>
        </div>
      </div>
    </div>

    <div class="alert alert-info mt-3 mb-0">
      <i class="bi bi-info-circle me-2"></i>
      <%= t("registration.campaign.patterns.note") %>
    </div>
  </div>
</div>
