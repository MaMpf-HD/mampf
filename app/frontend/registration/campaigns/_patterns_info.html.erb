<div class="card mb-3">
  <div class="card-header border-bottom-0 pb-0">
    <h5 class="card-title"><%= t("registration.campaign.patterns.title") %></h5>
  </div>
  <div class="card-body pt-2">
    <!-- Superset Principle Banner -->
    <div class="alert alert-primary d-flex align-items-center mb-4" role="alert">
      <i class="bi bi-diagram-3-fill fs-3 me-3"></i>
      <div>
        <h6 class="alert-heading fw-bold mb-1"><%= t("registration.campaign.patterns.superset.title") %></h6>
        <p class="mb-0 small"><%= t("registration.campaign.patterns.superset.description").html_safe %></p>
      </div>
    </div>

    <div class="row g-3">
      <!-- Group Allocation -->
      <div class="col-md-6">
        <div class="card h-100 border-secondary">
          <div class="card-header bg-secondary text-white fw-bold">
            <%= t("registration.campaign.patterns.group_allocation.title") %>
          </div>
          <div class="card-body">
            <ul class="list-unstyled small mb-0">
              <li class="mb-2">
                <strong><%= t("registration.campaign.patterns.labels.best_for") %>:</strong>
                <%= t("registration.campaign.patterns.group_allocation.best_for") %>
              </li>
              <li class="mb-2">
                <strong><%= t("registration.campaign.patterns.labels.target") %>:</strong>
                <%= t("registration.campaign.patterns.group_allocation.target") %>
              </li>
              <li>
                <strong><%= t("registration.campaign.patterns.labels.outcome") %>:</strong>
                <%= t("registration.campaign.patterns.group_allocation.outcome") %>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Direct Enrollment -->
      <div class="col-md-6">
        <div class="card h-100 border-secondary">
          <div class="card-header bg-dark text-white fw-bold">
            <%= t("registration.campaign.patterns.direct_enrollment.title") %>
          </div>
          <div class="card-body">
            <ul class="list-unstyled small mb-0">
              <li class="mb-2">
                <strong><%= t("registration.campaign.patterns.labels.best_for") %>:</strong>
                <%= t("registration.campaign.patterns.direct_enrollment.best_for") %>
              </li>
              <li class="mb-2">
                <strong><%= t("registration.campaign.patterns.labels.target") %>:</strong>
                <%= t("registration.campaign.patterns.direct_enrollment.target") %>
              </li>
              <li class="mb-2">
                <strong><%= t("registration.campaign.patterns.labels.outcome") %>:</strong>
                <%= t("registration.campaign.patterns.direct_enrollment.outcome") %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Special Cases -->
    <div class="card mt-3 border-secondary">
      <div class="card-header bg-light fw-bold">
        <%= t("registration.campaign.patterns.special_cases.title") %>
      </div>
      <div class="card-body pt-2 pb-2">
        <p class="small mb-2 fw-bold text-muted">
          <%= t("registration.campaign.patterns.special_cases.intro").html_safe %>
        </p>
        <ul class="mb-0 small ps-3">
          <li class="mb-1"><%= t("registration.campaign.patterns.special_cases.planning").html_safe %></li>
          <li class="mb-1"><%= t("registration.campaign.patterns.special_cases.repeaters").html_safe %></li>
          <li><%= t("registration.campaign.patterns.special_cases.latecomers").html_safe %></li>
        </ul>
      </div>
    </div>

    <!-- Footnotes -->
    <div class="mt-3 bg-light p-3 rounded border text-muted">
      <h6 class="small fw-bold text-uppercase"><%= t("registration.campaign.patterns.notes.title") %></h6>
      <ul class="mb-0 small ps-3">
        <li><%= t("registration.campaign.patterns.notes.concurrent") %></li>
        <li><%= t("registration.campaign.patterns.notes.assessments").html_safe %></li>
        <li><%= t("registration.campaign.patterns.notes.item_types") %></li>
        <li><%= t("registration.campaign.patterns.notes.limit_lecture").html_safe %></li>
      </ul>
    </div>
  </div>
</div>
