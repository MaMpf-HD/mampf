<div class="card mb-3">
  <div class="card-header">
    <h5 class="card-title mb-0"><%= t("registration.campaign.patterns.title") %></h5>
  </div>
  <div class="card-body">
    <div class="row g-3">
      <div class="col-md-4">
        <div class="card h-100 border-primary">
          <div class="card-header bg-primary text-white">
            <%= t("registration.campaign.patterns.group_track.title") %>
          </div>
          <div class="card-body">
            <p class="card-text"><%= t("registration.campaign.patterns.group_track.description") %></p>
            <ul class="list-unstyled small">
              <li class="mb-2">
                <strong><%= t("registration.campaign.patterns.group_track.primary_label") %></strong>
                <%= t("registration.campaign.patterns.group_track.primary_text") %>
              </li>
              <li class="mb-2">
                <%= t("registration.campaign.patterns.group_track.secondary_description") %>
              </li>
              <li class="mb-2">
                <strong><%= t("registration.campaign.patterns.group_track.secondary_label") %></strong>
                <%= t("registration.campaign.patterns.group_track.secondary_text") %>
              </li>
              <li><em><%= t("registration.campaign.patterns.group_track.logic") %></em></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 border-success">
          <div class="card-header bg-success text-white">
            <%= t("registration.campaign.patterns.enrollment_track.title") %>
          </div>
          <div class="card-body">
            <p class="card-text"><%= t("registration.campaign.patterns.enrollment_track.description") %></p>
            <ul class="list-unstyled small">
              <li class="mb-2">
                <strong><%= t("registration.campaign.patterns.enrollment_track.primary_label") %></strong>
                <%= t("registration.campaign.patterns.enrollment_track.primary_text") %>
              </li>
              <li><em><%= t("registration.campaign.patterns.enrollment_track.logic") %></em></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 border-warning">
          <div class="card-header bg-warning text-dark">
            <%= t("registration.campaign.patterns.mixed_track.title") %>
          </div>
          <div class="card-body">
            <p class="card-text"><%= t("registration.campaign.patterns.mixed_track.description") %></p>
            <ul class="list-unstyled small">
              <li class="mb-2 text-danger"><%= t("registration.campaign.patterns.mixed_track.implication") %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-3 alert alert-info">
      <h6><%= t("registration.campaign.patterns.notes.title") %></h6>
      <ul class="mb-0 small">
        <li><%= t("registration.campaign.patterns.notes.assessments") %></li>
        <li><%= t("registration.campaign.patterns.notes.item_types") %></li>
        <li><%= t("registration.campaign.patterns.notes.planning") %></li>
      </ul>
    </div>
  </div>
</div>
