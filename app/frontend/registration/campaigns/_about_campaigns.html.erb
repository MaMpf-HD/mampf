<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0"><%= t("registration.campaign.about.title") %></h5>
  </div>
  <div class="card-body">
    <p class="lead mb-4"><%= t("registration.campaign.about.intro") %></p>

    <div class="row g-4">
      <div class="col-md-6">
        <div class="border rounded p-3 h-100">
          <h6 class="fw-bold mb-3">
            <i class="bi bi-calendar-check me-2 text-primary"></i>
            <%= t("registration.campaign.about.when_to_use_campaign.title") %>
          </h6>
          <ul class="mb-0 small">
            <% t("registration.campaign.about.when_to_use_campaign.benefits").each do |benefit| %>
              <li><%= benefit %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="col-md-6">
        <div class="border rounded p-3 h-100">
          <h6 class="fw-bold mb-3">
            <i class="bi bi-person-plus me-2 text-success"></i>
            <%= t("registration.campaign.about.when_to_use_self.title") %>
          </h6>
          <ul class="mb-0 small">
            <% t("registration.campaign.about.when_to_use_self.benefits").each do |benefit| %>
              <li><%= benefit %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="alert alert-info mt-4 mb-0">
      <i class="bi bi-info-circle me-2"></i>
      <%= t("registration.campaign.about.note") %>
    </div>
  </div>
</div>
