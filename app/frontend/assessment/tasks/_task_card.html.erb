<div id="<%= dom_id(task) %>" class="card mb-2" data-sortable-item data-id="<%= task.id %>">
  <div class="card-body py-2">
    <div class="d-flex justify-content-between align-items-center">
      <div class="flex-grow-1 d-flex align-items-center" data-sortable-handle style="cursor: grab;">
        <i class="bi bi-grip-vertical text-muted me-2"></i>
        <span class="fw-bold me-3"><%= number_with_precision(task.max_points, strip_insignificant_zeros: true) %> <%= t('assessment.task.points_abbrev') %></span>
        <% if task.description.present? %>
          <span class="text-muted small"><%= task.description %></span>
        <% end %>
      </div>
      <div class="d-flex gap-2">
        <%= link_to edit_assessment_assessment_task_path(assessment, task),
                    class: "btn btn-sm btn-outline-primary",
                    title: t('basics.edit'),
                    data: { turbo_stream: true } do %>
          <i class="far fa-edit"></i>
        <% end %>
        <%= button_to assessment_assessment_task_path(assessment, task),
                      method: :delete,
                      class: "btn btn-sm btn-outline-danger",
                      title: t('basics.delete'),
                      data: { turbo_confirm: t('basics.confirm_delete') } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
